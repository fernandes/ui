{
  "name": "ui-dummy-app",
  "version": "0.1.0",
  "private": true,
  "description": "Dummy app for testing UI Engine",
  "packageManager": "bun@latest",
  "scripts": {
    "build": "bun run build:js && bun run build:css",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css",
    "build:css:watch": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --watch",
    "build:css:prod": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify",
    "build:js": "bun build ./app/javascript/bundled.js --outdir=./app/assets/builds --target=browser --format=esm",
    "build:js:watch": "bun build ./app/javascript/bundled.js --outdir=./app/assets/builds --target=browser --format=esm --watch",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^20.0.10",
    "@tailwindcss/cli": "^4.1.17",
    "@testing-library/dom": "^10.4.1",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo": "^8.0.20",
    "date-fns": "^4.1.0",
    "embla-carousel": "^8.6.0",
    "playwright": "^1.57.0",
    "tw-animate-css": "^1.4.0"
  }
}
