<!DOCTYPE html>
<html>
<head>
  <title>Calendar Component Showcase</title>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>
<body class="p-8 bg-background text-foreground">
  <div class="max-w-6xl mx-auto space-y-12">
    <header>
      <h1 class="text-4xl font-bold mb-2">Calendar Component</h1>
      <p class="text-muted-foreground">A date picker calendar built with date-fns and Stimulus</p>
    </header>

    <!-- Basic Calendar (Phlex) -->
    <section class="space-y-6">
      <div>
        <h2 class="text-2xl font-semibold">Basic Calendar</h2>
        <p class="text-muted-foreground text-sm">Single date selection (default mode)</p>
      </div>

      <div class="flex flex-wrap gap-8">
        <div class="rounded-md border">
          <%= render UI::Calendar.new(id: "basic-calendar") %>
        </div>

        <div class="rounded-md bg-muted p-4 flex-1 min-w-[300px]">
          <p class="text-sm font-mono whitespace-pre-wrap">&lt;%= render UI::Calendar.new %&gt;</p>
        </div>
      </div>
    </section>

    <!-- With Pre-selected Date -->
    <section class="space-y-6 border-t pt-8">
      <div>
        <h2 class="text-2xl font-semibold">With Selected Date</h2>
        <p class="text-muted-foreground text-sm">Calendar with a pre-selected date</p>
      </div>

      <div class="flex flex-wrap gap-8">
        <div class="rounded-md border">
          <%= render UI::Calendar.new(selected: Date.today, id: "selected-calendar") %>
        </div>

        <div class="rounded-md bg-muted p-4 flex-1 min-w-[300px]">
          <p class="text-sm font-mono whitespace-pre-wrap">&lt;%= render UI::Calendar.new(selected: Date.today) %&gt;</p>
        </div>
      </div>
    </section>

    <!-- Date Range Selection -->
    <section class="space-y-6 border-t pt-8">
      <div>
        <h2 class="text-2xl font-semibold">Date Range</h2>
        <p class="text-muted-foreground text-sm">Select a start and end date</p>
      </div>

      <div class="flex flex-wrap gap-8">
        <div class="rounded-md border">
          <%= render UI::Calendar.new(
            mode: :range,
            selected: Date.today..(Date.today + 7),
            id: "range-calendar"
          ) %>
        </div>

        <div class="rounded-md bg-muted p-4 flex-1 min-w-[300px]">
          <p class="text-sm font-mono whitespace-pre-wrap">&lt;%= render UI::Calendar.new(
  mode: :range,
  selected: Date.today..(Date.today + 7)
) %&gt;</p>
        </div>
      </div>
    </section>

    <!-- Multiple Months -->
    <section class="space-y-6 border-t pt-8">
      <div>
        <h2 class="text-2xl font-semibold">Multiple Months</h2>
        <p class="text-muted-foreground text-sm">Display 2 months side by side</p>
      </div>

      <div class="flex flex-wrap gap-8">
        <div class="rounded-md border">
          <%= render UI::Calendar.new(number_of_months: 2, id: "multiple-months-calendar") %>
        </div>

        <div class="rounded-md bg-muted p-4 flex-1 min-w-[300px]">
          <p class="text-sm font-mono whitespace-pre-wrap">&lt;%= render UI::Calendar.new(number_of_months: 2) %&gt;</p>
        </div>
      </div>
    </section>

    <!-- Range with Multiple Months -->
    <section class="space-y-6 border-t pt-8">
      <div>
        <h2 class="text-2xl font-semibold">Range with Multiple Months</h2>
        <p class="text-muted-foreground text-sm">Date range selection with 2 months displayed (hover to preview range)</p>
      </div>

      <div class="flex flex-wrap gap-8">
        <div class="rounded-md border">
          <%= render UI::Calendar.new(
            mode: :range,
            number_of_months: 2
          ) %>
        </div>

        <div class="rounded-md bg-muted p-4 flex-1 min-w-[300px]">
          <p class="text-sm font-mono whitespace-pre-wrap">&lt;%= render UI::Calendar.new(
  mode: :range,
  number_of_months: 2
) %&gt;</p>
        </div>
      </div>
    </section>

    <!-- With Dropdowns -->
    <section class="space-y-6 border-t pt-8">
      <div>
        <h2 class="text-2xl font-semibold">With Dropdowns</h2>
        <p class="text-muted-foreground text-sm">Month/Year dropdown navigation</p>
      </div>

      <div class="flex flex-wrap gap-8">
        <div class="rounded-md border">
          <%= render UI::Calendar.new(show_dropdowns: true) %>
        </div>

        <div class="rounded-md bg-muted p-4 flex-1 min-w-[300px]">
          <p class="text-sm font-mono whitespace-pre-wrap">&lt;%= render UI::Calendar.new(show_dropdowns: true) %&gt;</p>
        </div>
      </div>
    </section>

    <!-- Date of Birth -->
    <section class="space-y-6 border-t pt-8">
      <div>
        <h2 class="text-2xl font-semibold">Date of Birth</h2>
        <p class="text-muted-foreground text-sm">With year dropdown going back 100 years</p>
      </div>

      <div class="flex flex-wrap gap-8">
        <div class="rounded-md border">
          <%= render UI::Calendar.new(
            show_dropdowns: true,
            month: Date.new(1990, 1, 1),
            min_date: Date.today - 100.years,
            max_date: Date.today
          ) %>
        </div>

        <div class="rounded-md bg-muted p-4 flex-1 min-w-[300px]">
          <p class="text-sm font-mono whitespace-pre-wrap">&lt;%= render UI::Calendar.new(
  show_dropdowns: true,
  month: Date.new(1990, 1, 1),
  min_date: Date.today - 100.years,
  max_date: Date.today
) %&gt;</p>
        </div>
      </div>
    </section>

    <!-- Min/Max Dates -->
    <section class="space-y-6 border-t pt-8">
      <div>
        <h2 class="text-2xl font-semibold">With Min/Max Dates</h2>
        <p class="text-muted-foreground text-sm">Restricted date range (next 30 days only)</p>
      </div>

      <div class="flex flex-wrap gap-8">
        <div class="rounded-md border">
          <%= render UI::Calendar.new(
            min_date: Date.today,
            max_date: Date.today + 30.days,
            id: "min-max-calendar"
          ) %>
        </div>

        <div class="rounded-md bg-muted p-4 flex-1 min-w-[300px]">
          <p class="text-sm font-mono whitespace-pre-wrap">&lt;%= render UI::Calendar.new(
  min_date: Date.today,
  max_date: Date.today + 30.days
) %&gt;</p>
        </div>
      </div>
    </section>

    <!-- Range with Min/Max Days -->
    <section class="space-y-6 border-t pt-8">
      <div>
        <h2 class="text-2xl font-semibold">Range with Min/Max Days</h2>
        <p class="text-muted-foreground text-sm">Range selection constrained to 3-7 days (hover over dates to see preview)</p>
      </div>

      <div class="flex flex-wrap gap-8">
        <div class="rounded-md border">
          <%= render UI::Calendar.new(
            mode: :range,
            min_range_days: 3,
            max_range_days: 7
          ) %>
        </div>

        <div class="rounded-md bg-muted p-4 flex-1 min-w-[300px]">
          <p class="text-sm font-mono whitespace-pre-wrap">&lt;%= render UI::Calendar.new(
  mode: :range,
  min_range_days: 3,
  max_range_days: 7
) %&gt;</p>
        </div>
      </div>
    </section>

    <!-- Range with Exclude Disabled -->
    <section class="space-y-6 border-t pt-8">
      <div>
        <h2 class="text-2xl font-semibold">Range without Disabled Dates</h2>
        <p class="text-muted-foreground text-sm">Range cannot include disabled dates (weekends disabled)</p>
      </div>

      <div class="flex flex-wrap gap-8">
        <div class="rounded-md border">
          <%
            # Disable weekends for the current month
            today = Date.today
            month_start = today.beginning_of_month
            month_end = today.end_of_month
            weekend_dates = (month_start..month_end).select { |d| d.saturday? || d.sunday? }
          %>
          <%= render UI::Calendar.new(
            mode: :range,
            exclude_disabled: true,
            disabled_dates: weekend_dates
          ) %>
        </div>

        <div class="rounded-md bg-muted p-4 flex-1 min-w-[300px]">
          <p class="text-sm font-mono whitespace-pre-wrap">&lt;%= render UI::Calendar.new(
  mode: :range,
  exclude_disabled: true,
  disabled_dates: weekend_dates
) %&gt;</p>
        </div>
      </div>
    </section>

    <!-- Week Starts Monday -->
    <section class="space-y-6 border-t pt-8">
      <div>
        <h2 class="text-2xl font-semibold">Week Starts Monday</h2>
        <p class="text-muted-foreground text-sm">European-style calendar starting on Monday</p>
      </div>

      <div class="flex flex-wrap gap-8">
        <div class="rounded-md border">
          <%= render UI::Calendar.new(week_starts_on: 1) %>
        </div>

        <div class="rounded-md bg-muted p-4 flex-1 min-w-[300px]">
          <p class="text-sm font-mono whitespace-pre-wrap">&lt;%= render UI::Calendar.new(week_starts_on: 1) %&gt;</p>
        </div>
      </div>
    </section>

    <!-- Localization -->
    <section class="space-y-6 border-t pt-8">
      <div>
        <h2 class="text-2xl font-semibold">Localization</h2>
        <p class="text-muted-foreground text-sm">Calendars with different locales (month names, weekday names)</p>
      </div>

      <div class="flex flex-wrap gap-8">
        <div>
          <p class="text-sm font-medium mb-2">Portuguese (Brazil)</p>
          <div class="rounded-md border">
            <%= render UI::Calendar.new(locale: "pt-BR") %>
          </div>
        </div>

        <div>
          <p class="text-sm font-medium mb-2">Spanish</p>
          <div class="rounded-md border">
            <%= render UI::Calendar.new(locale: "es-ES") %>
          </div>
        </div>

        <div>
          <p class="text-sm font-medium mb-2">Japanese</p>
          <div class="rounded-md border">
            <%= render UI::Calendar.new(locale: "ja-JP") %>
          </div>
        </div>
      </div>

      <div class="rounded-md bg-muted p-4">
        <p class="text-sm font-mono whitespace-pre-wrap">&lt;%= render UI::Calendar.new(locale: "pt-BR") %&gt;
&lt;%= render UI::Calendar.new(locale: "es-ES") %&gt;
&lt;%= render UI::Calendar.new(locale: "ja-JP") %&gt;</p>
      </div>
    </section>

    <!-- With Form -->
    <section class="space-y-6 border-t pt-8">
      <div>
        <h2 class="text-2xl font-semibold">Form Integration</h2>
        <p class="text-muted-foreground text-sm">Hidden input for form submission</p>
      </div>

      <div class="flex flex-wrap gap-8">
        <%= form_with url: "#", method: :get, class: "space-y-4" do |f| %>
          <div class="rounded-md border">
            <%= render UI::Calendar.new(name: "booking_date", selected: Date.today, id: "form-calendar") %>
          </div>
          <%= render UI::Button.new(type: "submit") { "Submit Form" } %>
        <% end %>

        <div class="rounded-md bg-muted p-4 flex-1 min-w-[300px]">
          <p class="text-sm font-mono whitespace-pre-wrap">&lt;%= render UI::Calendar.new(
  name: "booking_date",
  selected: Date.today
) %&gt;</p>
        </div>
      </div>
    </section>

    <!-- ERB Partial -->
    <section class="space-y-6 border-t pt-8">
      <div>
        <h2 class="text-2xl font-semibold">ERB Partial</h2>
        <p class="text-muted-foreground text-sm">Using the ERB partial directly</p>
      </div>

      <div class="flex flex-wrap gap-8">
        <div class="rounded-md border">
          <%= render "ui/calendar" %>
        </div>

        <div class="rounded-md bg-muted p-4 flex-1 min-w-[300px]">
          <p class="text-sm font-mono whitespace-pre-wrap">&lt;%= render "ui/calendar" %&gt;</p>
        </div>
      </div>
    </section>

    <!-- ERB with Native Select (default) -->
    <section class="space-y-6 border-t pt-8">
      <div>
        <h2 class="text-2xl font-semibold">ERB with Native Select (default)</h2>
        <p class="text-muted-foreground text-sm">ERB partial with native HTML selects for dropdowns</p>
      </div>

      <div class="flex flex-wrap gap-8">
        <div class="rounded-md border">
          <%= render "ui/calendar", show_dropdowns: true, selected: Date.today %>
        </div>

        <div class="rounded-md bg-muted p-4 flex-1 min-w-[300px]">
          <p class="text-sm font-mono whitespace-pre-wrap">&lt;%= render "ui/calendar",
  show_dropdowns: true,
  selected: Date.today
  # use_native_select: true (default)
%&gt;</p>
        </div>
      </div>
    </section>

    <!-- ERB with UI Select -->
    <section class="space-y-6 border-t pt-8">
      <div>
        <h2 class="text-2xl font-semibold">ERB with UI Select</h2>
        <p class="text-muted-foreground text-sm">ERB partial using our custom UI Select component</p>
      </div>

      <div class="flex flex-wrap gap-8">
        <div class="rounded-md border">
          <%= render "ui/calendar", show_dropdowns: true, use_native_select: false, selected: Date.today %>
        </div>

        <div class="rounded-md bg-muted p-4 flex-1 min-w-[300px]">
          <p class="text-sm font-mono whitespace-pre-wrap">&lt;%= render "ui/calendar",
  show_dropdowns: true,
  use_native_select: false,
  selected: Date.today
%&gt;</p>
        </div>
      </div>
    </section>

    <!-- ViewComponent Implementation -->
    <section class="space-y-6 border-t pt-8">
      <div>
        <h2 class="text-2xl font-semibold">ViewComponent</h2>
        <p class="text-muted-foreground text-sm">Using the ViewComponent class</p>
      </div>

      <div class="flex flex-wrap gap-8">
        <div class="rounded-md border">
          <%= render UI::CalendarComponent.new %>
        </div>

        <div class="rounded-md bg-muted p-4 flex-1 min-w-[300px]">
          <p class="text-sm font-mono whitespace-pre-wrap">&lt;%= render UI::CalendarComponent.new %&gt;</p>
        </div>
      </div>
    </section>

    <!-- ViewComponent with options -->
    <section class="space-y-6 border-t pt-8">
      <div>
        <h2 class="text-2xl font-semibold">ViewComponent with Options</h2>
        <p class="text-muted-foreground text-sm">ViewComponent with dropdowns enabled</p>
      </div>

      <div class="flex flex-wrap gap-8">
        <div class="rounded-md border">
          <%= render UI::CalendarComponent.new(show_dropdowns: true) %>
        </div>

        <div class="rounded-md bg-muted p-4 flex-1 min-w-[300px]">
          <p class="text-sm font-mono whitespace-pre-wrap">&lt;%= render UI::CalendarComponent.new(show_dropdowns: true) %&gt;</p>
        </div>
      </div>
    </section>

    <!-- Configuration Reference -->
    <section class="space-y-6 border-t pt-8">
      <h2 class="text-2xl font-semibold">Configuration</h2>

      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b">
              <th class="text-left p-2 font-medium">Option</th>
              <th class="text-left p-2 font-medium">Type</th>
              <th class="text-left p-2 font-medium">Default</th>
              <th class="text-left p-2 font-medium">Description</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">mode</td>
              <td class="p-2">Symbol/String</td>
              <td class="p-2 font-mono text-xs">:single</td>
              <td class="p-2">Selection mode: :single, :range, or :multiple</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">selected</td>
              <td class="p-2">Date/Range/Array</td>
              <td class="p-2 font-mono text-xs">nil</td>
              <td class="p-2">Initially selected date(s)</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">month</td>
              <td class="p-2">Date</td>
              <td class="p-2 font-mono text-xs">Date.today</td>
              <td class="p-2">Initially displayed month</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">number_of_months</td>
              <td class="p-2">Integer</td>
              <td class="p-2 font-mono text-xs">1</td>
              <td class="p-2">Number of months to display side by side</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">week_starts_on</td>
              <td class="p-2">Integer</td>
              <td class="p-2 font-mono text-xs">0</td>
              <td class="p-2">First day of week (0=Sunday, 1=Monday, etc.)</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">locale</td>
              <td class="p-2">String</td>
              <td class="p-2 font-mono text-xs">"en-US"</td>
              <td class="p-2">BCP 47 locale tag (e.g., "pt-BR", "es-ES", "ja-JP")</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">min_date</td>
              <td class="p-2">Date</td>
              <td class="p-2 font-mono text-xs">nil</td>
              <td class="p-2">Minimum selectable date</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">max_date</td>
              <td class="p-2">Date</td>
              <td class="p-2 font-mono text-xs">nil</td>
              <td class="p-2">Maximum selectable date</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">disabled_dates</td>
              <td class="p-2">Array&lt;Date&gt;</td>
              <td class="p-2 font-mono text-xs">[]</td>
              <td class="p-2">Dates that cannot be selected</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">show_outside_days</td>
              <td class="p-2">Boolean</td>
              <td class="p-2 font-mono text-xs">true</td>
              <td class="p-2">Show days from adjacent months</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">fixed_weeks</td>
              <td class="p-2">Boolean</td>
              <td class="p-2 font-mono text-xs">false</td>
              <td class="p-2">Always show 6 weeks</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">show_dropdowns</td>
              <td class="p-2">Boolean</td>
              <td class="p-2 font-mono text-xs">false</td>
              <td class="p-2">Show month/year dropdown selectors</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">year_range</td>
              <td class="p-2">Integer</td>
              <td class="p-2 font-mono text-xs">100</td>
              <td class="p-2">Number of years to show in dropdown</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">min_range_days</td>
              <td class="p-2">Integer</td>
              <td class="p-2 font-mono text-xs">0</td>
              <td class="p-2">Minimum days for range selection (0 = no limit)</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">max_range_days</td>
              <td class="p-2">Integer</td>
              <td class="p-2 font-mono text-xs">0</td>
              <td class="p-2">Maximum days for range selection (0 = no limit)</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">exclude_disabled</td>
              <td class="p-2">Boolean</td>
              <td class="p-2 font-mono text-xs">false</td>
              <td class="p-2">Prevent ranges that contain disabled dates</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">use_native_select</td>
              <td class="p-2">Boolean</td>
              <td class="p-2 font-mono text-xs">true</td>
              <td class="p-2">Use native HTML select (true) or UI Select component (false)</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">name</td>
              <td class="p-2">String</td>
              <td class="p-2 font-mono text-xs">nil</td>
              <td class="p-2">Form field name for hidden input</td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>

    <!-- JavaScript Events -->
    <section class="space-y-6 border-t pt-8">
      <h2 class="text-2xl font-semibold">JavaScript Events</h2>
      <p class="text-muted-foreground text-sm">The calendar dispatches events for various interactions</p>

      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b">
              <th class="text-left p-2 font-medium">Event</th>
              <th class="text-left p-2 font-medium">Detail</th>
              <th class="text-left p-2 font-medium">Description</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">ui--calendar:select</td>
              <td class="p-2 font-mono text-xs">{ selected, date }</td>
              <td class="p-2">Fired when a date is selected</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">ui--calendar:monthChange</td>
              <td class="p-2 font-mono text-xs">{ month, direction }</td>
              <td class="p-2">Fired when navigating to a different month</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">ui--calendar:dayFocus</td>
              <td class="p-2 font-mono text-xs">{ date, element }</td>
              <td class="p-2">Fired when a day receives focus</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">ui--calendar:dayBlur</td>
              <td class="p-2 font-mono text-xs">{ date, element }</td>
              <td class="p-2">Fired when a day loses focus</td>
            </tr>
            <tr class="border-b">
              <td class="p-2 font-mono text-xs">ui--calendar:rangeError</td>
              <td class="p-2 font-mono text-xs">{ error, ... }</td>
              <td class="p-2">Fired when range selection fails (min/max/disabled)</td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="rounded-md bg-muted p-4">
        <p class="text-sm font-mono whitespace-pre-wrap">// Listen for date selection
document.addEventListener("ui--calendar:select", (event) => {
  console.log("Selected dates:", event.detail.selected)
  console.log("Clicked date:", event.detail.date)
})

// Listen for month changes
document.addEventListener("ui--calendar:monthChange", (event) => {
  console.log("New month:", event.detail.month)
  console.log("Direction:", event.detail.direction) // "next" or "prev"
})

// Listen for range errors
document.addEventListener("ui--calendar:rangeError", (event) => {
  console.log("Error type:", event.detail.error) // "min", "max", or "disabled"
})</p>
