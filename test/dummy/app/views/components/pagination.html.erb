<div class="space-y-12 p-8">
  <div class="space-y-4">
    <h1 class="text-4xl font-bold">Pagination</h1>
    <p class="text-muted-foreground text-lg">
      Display navigation controls for paginated content with page numbers, previous/next links, and ellipsis indicators.
    </p>
  </div>

  <!-- Example 1: Basic Pagination (Phlex) -->
  <div class="space-y-4">
    <div>
      <h2 class="text-2xl font-semibold">Basic Pagination</h2>
      <p class="text-muted-foreground text-sm">Simple pagination with a few pages.</p>
    </div>
    <div class="rounded-lg border bg-card p-6">
      <%= render UI::Pagination::Pagination.new do %>
        <%= render UI::Pagination::Content.new do %>
          <%= render UI::Pagination::Item.new do %>
            <%= render UI::Pagination::Previous.new(href: "#") %>
          <% end %>

          <%= render UI::Pagination::Item.new do %>
            <%= render UI::Pagination::Link.new(href: "#") { "1" } %>
          <% end %>

          <%= render UI::Pagination::Item.new do %>
            <%= render UI::Pagination::Link.new(href: "#", active: true) { "2" } %>
          <% end %>

          <%= render UI::Pagination::Item.new do %>
            <%= render UI::Pagination::Link.new(href: "#") { "3" } %>
          <% end %>

          <%= render UI::Pagination::Item.new do %>
            <%= render UI::Pagination::Next.new(href: "#") %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Example 2: With Ellipsis (ViewComponent) -->
  <div class="space-y-4">
    <div>
      <h2 class="text-2xl font-semibold">With Ellipsis</h2>
      <p class="text-muted-foreground text-sm">Pagination with ellipsis for many pages.</p>
    </div>
    <div class="rounded-lg border bg-card p-6">
      <%= render(UI::Pagination::PaginationComponent.new) do %>
        <%= render(UI::Pagination::PaginationContentComponent.new) do %>
          <%= render(UI::Pagination::PaginationItemComponent.new) do %>
            <%= render(UI::Pagination::PaginationPreviousComponent.new(href: "#")) %>
          <% end %>

          <%= render(UI::Pagination::PaginationItemComponent.new) do %>
            <%= render(UI::Pagination::PaginationLinkComponent.new(href: "#")) { "1" } %>
          <% end %>

          <%= render(UI::Pagination::PaginationItemComponent.new) do %>
            <%= render(UI::Pagination::PaginationEllipsisComponent.new) %>
          <% end %>

          <%= render(UI::Pagination::PaginationItemComponent.new) do %>
            <%= render(UI::Pagination::PaginationLinkComponent.new(href: "#")) { "5" } %>
          <% end %>

          <%= render(UI::Pagination::PaginationItemComponent.new) do %>
            <%= render(UI::Pagination::PaginationLinkComponent.new(href: "#", active: true)) { "6" } %>
          <% end %>

          <%= render(UI::Pagination::PaginationItemComponent.new) do %>
            <%= render(UI::Pagination::PaginationLinkComponent.new(href: "#")) { "7" } %>
          <% end %>

          <%= render(UI::Pagination::PaginationItemComponent.new) do %>
            <%= render(UI::Pagination::PaginationEllipsisComponent.new) %>
          <% end %>

          <%= render(UI::Pagination::PaginationItemComponent.new) do %>
            <%= render(UI::Pagination::PaginationLinkComponent.new(href: "#")) { "20" } %>
          <% end %>

          <%= render(UI::Pagination::PaginationItemComponent.new) do %>
            <%= render(UI::Pagination::PaginationNextComponent.new(href: "#")) %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Example 3: First Page (ERB) -->
  <div class="space-y-4">
    <div>
      <h2 class="text-2xl font-semibold">First Page</h2>
      <p class="text-muted-foreground text-sm">Pagination showing first page state.</p>
    </div>
    <div class="rounded-lg border bg-card p-6">
      <%= render "ui/pagination/pagination" do %>
        <%= render "ui/pagination/pagination_content" do %>
          <%= render "ui/pagination/pagination_item" do %>
            <%= render "ui/pagination/pagination_link", href: "#", classes: "pointer-events-none opacity-50", size: "default" do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4">
                <path d="m15 18-6-6 6-6"/>
              </svg>
              <span class="hidden sm:block">Previous</span>
            <% end %>
          <% end %>

          <%= render "ui/pagination/pagination_item" do %>
            <%= render "ui/pagination/pagination_link", href: "#", active: true do %>1<% end %>
          <% end %>

          <%= render "ui/pagination/pagination_item" do %>
            <%= render "ui/pagination/pagination_link", href: "#" do %>2<% end %>
          <% end %>

          <%= render "ui/pagination/pagination_item" do %>
            <%= render "ui/pagination/pagination_link", href: "#" do %>3<% end %>
          <% end %>

          <%= render "ui/pagination/pagination_item" do %>
            <%= render "ui/pagination/pagination_next", href: "#" %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Example 4: Last Page (Phlex) -->
  <div class="space-y-4">
    <div>
      <h2 class="text-2xl font-semibold">Last Page</h2>
      <p class="text-muted-foreground text-sm">Pagination showing last page state.</p>
    </div>
    <div class="rounded-lg border bg-card p-6">
      <%= render UI::Pagination::Pagination.new do %>
        <%= render UI::Pagination::Content.new do %>
          <%= render UI::Pagination::Item.new do %>
            <%= render UI::Pagination::Previous.new(href: "#") %>
          <% end %>

          <%= render UI::Pagination::Item.new do %>
            <%= render UI::Pagination::Link.new(href: "#") { "8" } %>
          <% end %>

          <%= render UI::Pagination::Item.new do %>
            <%= render UI::Pagination::Link.new(href: "#") { "9" } %>
          <% end %>

          <%= render UI::Pagination::Item.new do %>
            <%= render UI::Pagination::Link.new(href: "#", active: true) { "10" } %>
          <% end %>

          <%= render UI::Pagination::Item.new do %>
            <%= render UI::Pagination::Link.new(
              href: "#",
              size: "default",
              classes: "pointer-events-none opacity-50"
            ) do %>
              <span class="hidden sm:block">Next</span>
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4">
                <path d="m9 18 6-6-6-6"/>
              </svg>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Example 5: Many Pages (ViewComponent) -->
  <div class="space-y-4">
    <div>
      <h2 class="text-2xl font-semibold">Many Pages</h2>
      <p class="text-muted-foreground text-sm">Pagination with multiple ellipsis.</p>
    </div>
    <div class="rounded-lg border bg-card p-6">
      <%= render(UI::Pagination::PaginationComponent.new) do %>
        <%= render(UI::Pagination::PaginationContentComponent.new) do %>
          <%= render(UI::Pagination::PaginationItemComponent.new) do %>
            <%= render(UI::Pagination::PaginationPreviousComponent.new(href: "#")) %>
          <% end %>

          <%= render(UI::Pagination::PaginationItemComponent.new) do %>
            <%= render(UI::Pagination::PaginationLinkComponent.new(href: "#")) { "1" } %>
          <% end %>

          <%= render(UI::Pagination::PaginationItemComponent.new) do %>
            <%= render(UI::Pagination::PaginationEllipsisComponent.new) %>
          <% end %>

          <%= render(UI::Pagination::PaginationItemComponent.new) do %>
            <%= render(UI::Pagination::PaginationLinkComponent.new(href: "#")) { "24" } %>
          <% end %>

          <%= render(UI::Pagination::PaginationItemComponent.new) do %>
            <%= render(UI::Pagination::PaginationLinkComponent.new(href: "#", active: true)) { "25" } %>
          <% end %>

          <%= render(UI::Pagination::PaginationItemComponent.new) do %>
            <%= render(UI::Pagination::PaginationLinkComponent.new(href: "#")) { "26" } %>
          <% end %>

          <%= render(UI::Pagination::PaginationItemComponent.new) do %>
            <%= render(UI::Pagination::PaginationEllipsisComponent.new) %>
          <% end %>

          <%= render(UI::Pagination::PaginationItemComponent.new) do %>
            <%= render(UI::Pagination::PaginationLinkComponent.new(href: "#")) { "100" } %>
          <% end %>

          <%= render(UI::Pagination::PaginationItemComponent.new) do %>
            <%= render(UI::Pagination::PaginationNextComponent.new(href: "#")) %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
