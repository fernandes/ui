<div class="container mx-auto py-8 space-y-8">
  <div>
    <h1 class="text-3xl font-bold mb-2">Dropdown Menu</h1>
    <p class="text-muted-foreground">Displays a menu to the user—such as a set of actions or functions—triggered by a button.</p>
  </div>

  <!-- Phlex Examples -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold">Phlex</h2>

    <div class="space-y-6">
      <!-- Basic Example -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Basic Dropdown</h3>
        <%= render UI::DropdownMenu::DropdownMenu.new do %>
          <%= render UI::DropdownMenu::Trigger.new(as_child: true) do |trigger_attrs| %>
            <%= render UI::Button::Button.new(variant: :outline, **trigger_attrs) { "Open Menu" } %>
          <% end %>

          <%= render UI::DropdownMenu::Content.new(classes: "w-56") do %>
            <%= render UI::DropdownMenu::Label.new { "My Account" } %>
            <%= render UI::DropdownMenu::Separator.new %>
            <%= render UI::DropdownMenu::Item.new do %>
              <%= lucide_icon("user") %>
              Profile
              <%= render UI::DropdownMenu::Shortcut.new { "⇧⌘P" } %>
            <% end %>
            <%= render UI::DropdownMenu::Item.new do %>
              <%= lucide_icon("credit-card") %>
              Billing
              <%= render UI::DropdownMenu::Shortcut.new { "⌘B" } %>
            <% end %>
            <%= render UI::DropdownMenu::Item.new do %>
              <%= lucide_icon("settings") %>
              Settings
              <%= render UI::DropdownMenu::Shortcut.new { "⌘S" } %>
            <% end %>
            <%= render UI::DropdownMenu::Separator.new %>
            <%= render UI::DropdownMenu::Item.new do %>
              <%= lucide_icon("log-out") %>
              Log out
              <%= render UI::DropdownMenu::Shortcut.new { "⇧⌘Q" } %>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <!-- With Checkboxes -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">With Checkboxes</h3>
        <%= render UI::DropdownMenu::DropdownMenu.new do %>
          <%= render UI::DropdownMenu::Trigger.new(as_child: true) do |trigger_attrs| %>
            <%= render UI::Button::Button.new(variant: :outline, **trigger_attrs) { "View Options" } %>
          <% end %>

          <%= render UI::DropdownMenu::Content.new(classes: "w-56") do %>
            <%= render UI::DropdownMenu::Label.new { "Appearance" } %>
            <%= render UI::DropdownMenu::Separator.new %>
            <%= render UI::DropdownMenu::CheckboxItem.new(checked: true) { "Status Bar" } %>
            <%= render UI::DropdownMenu::CheckboxItem.new(checked: false) { "Activity Bar" } %>
            <%= render UI::DropdownMenu::CheckboxItem.new(checked: true) { "Panel" } %>
          <% end %>
        <% end %>
      </div>

      <!-- With Radio Group -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">With Radio Group</h3>
        <%= render UI::DropdownMenu::DropdownMenu.new do %>
          <%= render UI::DropdownMenu::Trigger.new(as_child: true) do |trigger_attrs| %>
            <%= render UI::Button::Button.new(variant: :outline, **trigger_attrs) { "Panel Position" } %>
          <% end %>

          <%= render UI::DropdownMenu::Content.new(classes: "w-56") do %>
            <%= render UI::DropdownMenu::Label.new { "Position" } %>
            <%= render UI::DropdownMenu::Separator.new %>
            <%= render UI::DropdownMenu::RadioGroup.new do %>
              <%= render UI::DropdownMenu::RadioItem.new(value: "top") { "Top" } %>
              <%= render UI::DropdownMenu::RadioItem.new(value: "bottom", checked: true) { "Bottom" } %>
              <%= render UI::DropdownMenu::RadioItem.new(value: "right") { "Right" } %>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <!-- With Submenu -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">With Submenu</h3>
        <%= render UI::DropdownMenu::DropdownMenu.new do %>
          <%= render UI::DropdownMenu::Trigger.new(as_child: true) do |trigger_attrs| %>
            <%= render UI::Button::Button.new(variant: :outline, **trigger_attrs) { "More Options" } %>
          <% end %>

          <%= render UI::DropdownMenu::Content.new(classes: "w-56") do %>
            <%= render UI::DropdownMenu::Item.new do %>
              <%= lucide_icon("mail") %>
              Email
            <% end %>
            <%= render UI::DropdownMenu::Item.new do %>
              <%= lucide_icon("message-square") %>
              Message
            <% end %>
            <%= render UI::DropdownMenu::Separator.new %>
            <%= render UI::DropdownMenu::Sub.new do %>
              <%= render UI::DropdownMenu::SubTrigger.new do %>
                <%= lucide_icon("plus-circle") %>
                More Tools
              <% end %>
              <%= render UI::DropdownMenu::SubContent.new do %>
                <%= render UI::DropdownMenu::Item.new { "Save Page As..." } %>
                <%= render UI::DropdownMenu::Item.new { "Create Shortcut..." } %>
                <%= render UI::DropdownMenu::Item.new { "Name Window..." } %>
                <%= render UI::DropdownMenu::Separator.new %>
                <%= render UI::DropdownMenu::Item.new { "Developer Tools" } %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>

  <!-- ERB Partials Examples -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold">ERB Partials</h2>

    <div class="space-y-6">
      <!-- Basic Example -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Basic Menu</h3>
        <%= render "ui/dropdown_menu/dropdown_menu" do %>
          <%= render "ui/dropdown_menu/dropdown_menu_trigger", as_child: true do |trigger_attrs| %>
            <%= render "ui/button/button", variant: :outline, attributes: trigger_attrs do %>
              Actions
            <% end %>
          <% end %>

          <%= render "ui/dropdown_menu/dropdown_menu_content", classes: "w-48" do %>
            <%= render "ui/dropdown_menu/dropdown_menu_item" do %>
              Edit
            <% end %>
            <%= render "ui/dropdown_menu/dropdown_menu_item" do %>
              Duplicate
            <% end %>
            <%= render "ui/dropdown_menu/dropdown_menu_separator" %>
            <%= render "ui/dropdown_menu/dropdown_menu_item", variant: "destructive" do %>
              Delete
            <% end %>
          <% end %>
        <% end %>
      </div>

      <!-- With Labels and Shortcuts -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">With Labels</h3>
        <%= render "ui/dropdown_menu/dropdown_menu" do %>
          <%= render "ui/dropdown_menu/dropdown_menu_trigger", as_child: true do |trigger_attrs| %>
            <%= render "ui/button/button", variant: :outline, attributes: trigger_attrs do %>
              File Menu
            <% end %>
          <% end %>

          <%= render "ui/dropdown_menu/dropdown_menu_content", classes: "w-56" do %>
            <%= render "ui/dropdown_menu/dropdown_menu_label" do %>
              File
            <% end %>
            <%= render "ui/dropdown_menu/dropdown_menu_separator" %>
            <%= render "ui/dropdown_menu/dropdown_menu_item" do %>
              New File
              <%= render "ui/dropdown_menu/dropdown_menu_shortcut" do %>
                ⌘N
              <% end %>
            <% end %>
            <%= render "ui/dropdown_menu/dropdown_menu_item" do %>
              Save
              <%= render "ui/dropdown_menu/dropdown_menu_shortcut" do %>
                ⌘S
              <% end %>
            <% end %>
            <%= render "ui/dropdown_menu/dropdown_menu_item" do %>
              Save As...
              <%= render "ui/dropdown_menu/dropdown_menu_shortcut" do %>
                ⇧⌘S
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>

  <!-- ViewComponent Examples -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold">ViewComponent</h2>

    <div class="space-y-6">
      <!-- Basic Example -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Basic Menu</h3>
        <%= render(UI::DropdownMenu::DropdownMenuComponent.new) do %>
          <%= render(UI::DropdownMenu::TriggerComponent.new(as_child: true)) do %>
            <%= render(UI::Button::ButtonComponent.new(variant: :outline)) { "Open" } %>
          <% end %>

          <%= render(UI::DropdownMenu::ContentComponent.new(classes: "w-48")) do %>
            <%= render(UI::DropdownMenu::ItemComponent.new) { "New Tab" } %>
            <%= render(UI::DropdownMenu::ItemComponent.new) { "New Window" } %>
            <%= render(UI::DropdownMenu::SeparatorComponent.new) %>
            <%= render(UI::DropdownMenu::ItemComponent.new) { "Settings" } %>
          <% end %>
        <% end %>
      </div>

      <!-- With All Features -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Complete Example</h3>
        <%= render(UI::DropdownMenu::DropdownMenuComponent.new) do %>
          <%= render(UI::DropdownMenu::TriggerComponent.new(as_child: true)) do %>
            <%= render(UI::Button::ButtonComponent.new(variant: :outline)) { "Complete Menu" } %>
          <% end %>

          <%= render(UI::DropdownMenu::ContentComponent.new(classes: "w-56")) do %>
            <%= render(UI::DropdownMenu::LabelComponent.new) { "My Account" } %>
            <%= render(UI::DropdownMenu::SeparatorComponent.new) %>
            <%= render(UI::DropdownMenu::ItemComponent.new) { "Profile" } %>
            <%= render(UI::DropdownMenu::ItemComponent.new) { "Team" } %>
            <%= render(UI::DropdownMenu::SeparatorComponent.new) %>
            <%= render(UI::DropdownMenu::ItemComponent.new(variant: "destructive")) { "Delete Account" } %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>
</div>
