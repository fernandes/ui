<div class="container mx-auto py-8 space-y-8">
  <div>
    <h1 class="text-3xl font-bold mb-2">Dropdown Menu</h1>
    <p class="text-muted-foreground">Displays a menu to the user—such as a set of actions or functions—triggered by a button.</p>
  </div>

  <!-- Phlex Examples -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold">Phlex</h2>

    <div class="space-y-6">
      <!-- Basic Example -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Basic Dropdown</h3>
        <%= render UI::DropdownMenu.new do %>
          <%= render UI::DropdownMenuTrigger.new(as_child: true) do |trigger_attrs| %>
            <%= render UI::Button.new(variant: :outline, **trigger_attrs) { "Open Menu" } %>
          <% end %>

          <%= render UI::DropdownMenuContent.new(classes: "w-56") do %>
            <%= render UI::DropdownMenuLabel.new { "My Account" } %>
            <%= render UI::DropdownMenuSeparator.new %>
            <%= render UI::DropdownMenuItem.new do %>
              <%= lucide_icon("user") %>
              Profile
              <%= render UI::DropdownMenuShortcut.new { "⇧⌘P" } %>
            <% end %>
            <%= render UI::DropdownMenuItem.new do %>
              <%= lucide_icon("credit-card") %>
              Billing
              <%= render UI::DropdownMenuShortcut.new { "⌘B" } %>
            <% end %>
            <%= render UI::DropdownMenuItem.new do %>
              <%= lucide_icon("settings") %>
              Settings
              <%= render UI::DropdownMenuShortcut.new { "⌘S" } %>
            <% end %>
            <%= render UI::DropdownMenuSeparator.new %>
            <%= render UI::DropdownMenuItem.new do %>
              <%= lucide_icon("log-out") %>
              Log out
              <%= render UI::DropdownMenuShortcut.new { "⇧⌘Q" } %>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <!-- With Checkboxes -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">With Checkboxes</h3>
        <%= render UI::DropdownMenu.new do %>
          <%= render UI::DropdownMenuTrigger.new(as_child: true) do |trigger_attrs| %>
            <%= render UI::Button.new(variant: :outline, **trigger_attrs) { "View Options" } %>
          <% end %>

          <%= render UI::DropdownMenuContent.new(classes: "w-56") do %>
            <%= render UI::DropdownMenuLabel.new { "Appearance" } %>
            <%= render UI::DropdownMenuSeparator.new %>
            <%= render UI::DropdownMenuCheckboxItem.new(checked: true) { "Status Bar" } %>
            <%= render UI::DropdownMenuCheckboxItem.new(checked: false) { "Activity Bar" } %>
            <%= render UI::DropdownMenuCheckboxItem.new(checked: true) { "Panel" } %>
          <% end %>
        <% end %>
      </div>

      <!-- With Radio Group -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">With Radio Group</h3>
        <%= render UI::DropdownMenu.new do %>
          <%= render UI::DropdownMenuTrigger.new(as_child: true) do |trigger_attrs| %>
            <%= render UI::Button.new(variant: :outline, **trigger_attrs) { "Panel Position" } %>
          <% end %>

          <%= render UI::DropdownMenuContent.new(classes: "w-56") do %>
            <%= render UI::DropdownMenuLabel.new { "Position" } %>
            <%= render UI::DropdownMenuSeparator.new %>
            <%= render UI::DropdownMenuRadioGroup.new do %>
              <%= render UI::DropdownMenuRadioItem.new(value: "top") { "Top" } %>
              <%= render UI::DropdownMenuRadioItem.new(value: "bottom", checked: true) { "Bottom" } %>
              <%= render UI::DropdownMenuRadioItem.new(value: "right") { "Right" } %>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <!-- With Submenu -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">With Submenu</h3>
        <%= render UI::DropdownMenu.new do %>
          <%= render UI::DropdownMenuTrigger.new(as_child: true) do |trigger_attrs| %>
            <%= render UI::Button.new(variant: :outline, **trigger_attrs) { "More Options" } %>
          <% end %>

          <%= render UI::DropdownMenuContent.new(classes: "w-56") do %>
            <%= render UI::DropdownMenuItem.new do %>
              <%= lucide_icon("mail") %>
              Email
            <% end %>
            <%= render UI::DropdownMenuItem.new do %>
              <%= lucide_icon("message-square") %>
              Message
            <% end %>
            <%= render UI::DropdownMenuSeparator.new %>
            <%= render UI::DropdownMenuSub.new do %>
              <%= render UI::DropdownMenuSubTrigger.new do %>
                <%= lucide_icon("plus-circle") %>
                More Tools
              <% end %>
              <%= render UI::DropdownMenuSubContent.new do %>
                <%= render UI::DropdownMenuItem.new { "Save Page As..." } %>
                <%= render UI::DropdownMenuItem.new { "Create Shortcut..." } %>
                <%= render UI::DropdownMenuItem.new { "Name Window..." } %>
                <%= render UI::DropdownMenuSeparator.new %>
                <%= render UI::DropdownMenuItem.new { "Developer Tools" } %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>

  <!-- ERB Partials Examples -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold">ERB Partials</h2>

    <div class="space-y-6">
      <!-- Basic Example -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Basic Menu</h3>
        <%= render "ui/dropdown_menu" do %>
          <%= render "ui/dropdown_menu/trigger", as_child: true do |trigger_attrs| %>
            <%= render "ui/button", variant: :outline, attributes: trigger_attrs do %>
              Actions
            <% end %>
          <% end %>

          <%= render "ui/dropdown_menu/content", classes: "w-48" do %>
            <%= render "ui/dropdown_menu/item" do %>
              Edit
            <% end %>
            <%= render "ui/dropdown_menu/item" do %>
              Duplicate
            <% end %>
            <%= render "ui/dropdown_menu/separator" %>
            <%= render "ui/dropdown_menu/item", variant: "destructive" do %>
              Delete
            <% end %>
          <% end %>
        <% end %>
      </div>

      <!-- With Labels and Shortcuts -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">With Labels</h3>
        <%= render "ui/dropdown_menu" do %>
          <%= render "ui/dropdown_menu/trigger", as_child: true do |trigger_attrs| %>
            <%= render "ui/button", variant: :outline, attributes: trigger_attrs do %>
              File Menu
            <% end %>
          <% end %>

          <%= render "ui/dropdown_menu/content", classes: "w-56" do %>
            <%= render "ui/dropdown_menu/label" do %>
              File
            <% end %>
            <%= render "ui/dropdown_menu/separator" %>
            <%= render "ui/dropdown_menu/item" do %>
              New File
              <%= render "ui/dropdown_menu/shortcut" do %>
                ⌘N
              <% end %>
            <% end %>
            <%= render "ui/dropdown_menu/item" do %>
              Save
              <%= render "ui/dropdown_menu/shortcut" do %>
                ⌘S
              <% end %>
            <% end %>
            <%= render "ui/dropdown_menu/item" do %>
              Save As...
              <%= render "ui/dropdown_menu/shortcut" do %>
                ⇧⌘S
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>

  <!-- ViewComponent Examples -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold">ViewComponent</h2>

    <div class="space-y-6">
      <!-- Basic Example -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Basic Menu</h3>
        <%= render(UI::DropdownMenuComponent.new) do %>
          <%= render(UI::DropdownMenuTriggerComponent.new(as_child: true)) do %>
            <%= render(UI::ButtonComponent.new(variant: :outline)) { "Open" } %>
          <% end %>

          <%= render(UI::DropdownMenuContentComponent.new(classes: "w-48")) do %>
            <%= render(UI::DropdownMenuItemComponent.new) { "New Tab" } %>
            <%= render(UI::DropdownMenuItemComponent.new) { "New Window" } %>
            <%= render(UI::DropdownMenuSeparatorComponent.new) %>
            <%= render(UI::DropdownMenuItemComponent.new) { "Settings" } %>
          <% end %>
        <% end %>
      </div>

      <!-- With All Features -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Complete Example</h3>
        <%= render(UI::DropdownMenuComponent.new) do %>
          <%= render(UI::DropdownMenuTriggerComponent.new(as_child: true)) do %>
            <%= render(UI::ButtonComponent.new(variant: :outline)) { "Complete Menu" } %>
          <% end %>

          <%= render(UI::DropdownMenuContentComponent.new(classes: "w-56")) do %>
            <%= render(UI::DropdownMenuLabelComponent.new) { "My Account" } %>
            <%= render(UI::DropdownMenuSeparatorComponent.new) %>
            <%= render(UI::DropdownMenuItemComponent.new) { "Profile" } %>
            <%= render(UI::DropdownMenuItemComponent.new) { "Team" } %>
            <%= render(UI::DropdownMenuSeparatorComponent.new) %>
            <%= render(UI::DropdownMenuItemComponent.new(variant: "destructive")) { "Delete Account" } %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>
</div>
