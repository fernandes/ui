<div class="container mx-auto py-8 space-y-8">
  <div>
    <h1 class="text-3xl font-bold mb-2">Menubar</h1>
    <p class="text-muted-foreground">A visually persistent menu common in desktop applications that provides quick access to a consistent set of commands.</p>
  </div>

  <!-- Phlex Examples -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold">Phlex</h2>

    <div class="space-y-6">
      <!-- Basic Example (shadcn reference) -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Complete Example</h3>
        <%= render UI::Menubar.new(id: "phlex-menubar") do %>
          <!-- File Menu -->
          <%= render UI::MenubarMenu.new do %>
            <%= render UI::MenubarTrigger.new { "File" } %>
            <%= render UI::MenubarContent.new do %>
              <%= render UI::MenubarItem.new do %>
                New Tab
                <%= render UI::MenubarShortcut.new { "⌘T" } %>
              <% end %>
              <%= render UI::MenubarItem.new do %>
                New Window
                <%= render UI::MenubarShortcut.new { "⌘N" } %>
              <% end %>
              <%= render UI::MenubarItem.new(disabled: true) { "New Incognito Window" } %>
              <%= render UI::MenubarSeparator.new %>
              <%= render UI::MenubarSub.new do %>
                <%= render UI::MenubarSubTrigger.new { "Share" } %>
                <%= render UI::MenubarSubContent.new do %>
                  <%= render UI::MenubarItem.new { "Email link" } %>
                  <%= render UI::MenubarItem.new { "Messages" } %>
                  <%= render UI::MenubarItem.new { "Notes" } %>
                <% end %>
              <% end %>
              <%= render UI::MenubarSeparator.new %>
              <%= render UI::MenubarItem.new do %>
                Print...
                <%= render UI::MenubarShortcut.new { "⌘P" } %>
              <% end %>
            <% end %>
          <% end %>

          <!-- Edit Menu -->
          <%= render UI::MenubarMenu.new do %>
            <%= render UI::MenubarTrigger.new { "Edit" } %>
            <%= render UI::MenubarContent.new do %>
              <%= render UI::MenubarItem.new do %>
                Undo
                <%= render UI::MenubarShortcut.new { "⌘Z" } %>
              <% end %>
              <%= render UI::MenubarItem.new do %>
                Redo
                <%= render UI::MenubarShortcut.new { "⇧⌘Z" } %>
              <% end %>
              <%= render UI::MenubarSeparator.new %>
              <%= render UI::MenubarSub.new do %>
                <%= render UI::MenubarSubTrigger.new { "Find" } %>
                <%= render UI::MenubarSubContent.new do %>
                  <%= render UI::MenubarItem.new { "Search the web" } %>
                  <%= render UI::MenubarSeparator.new %>
                  <%= render UI::MenubarItem.new { "Find..." } %>
                  <%= render UI::MenubarItem.new { "Find Next" } %>
                  <%= render UI::MenubarItem.new { "Find Previous" } %>
                <% end %>
              <% end %>
              <%= render UI::MenubarSeparator.new %>
              <%= render UI::MenubarItem.new { "Cut" } %>
              <%= render UI::MenubarItem.new { "Copy" } %>
              <%= render UI::MenubarItem.new { "Paste" } %>
            <% end %>
          <% end %>

          <!-- View Menu -->
          <%= render UI::MenubarMenu.new do %>
            <%= render UI::MenubarTrigger.new { "View" } %>
            <%= render UI::MenubarContent.new do %>
              <%= render UI::MenubarCheckboxItem.new(checked: true) { "Always Show Bookmarks Bar" } %>
              <%= render UI::MenubarCheckboxItem.new { "Always Show Full URLs" } %>
              <%= render UI::MenubarSeparator.new %>
              <%= render UI::MenubarItem.new(inset: true) do %>
                Reload
                <%= render UI::MenubarShortcut.new { "⌘R" } %>
              <% end %>
              <%= render UI::MenubarItem.new(inset: true, disabled: true) do %>
                Force Reload
                <%= render UI::MenubarShortcut.new { "⇧⌘R" } %>
              <% end %>
              <%= render UI::MenubarSeparator.new %>
              <%= render UI::MenubarItem.new(inset: true) { "Toggle Fullscreen" } %>
              <%= render UI::MenubarSeparator.new %>
              <%= render UI::MenubarItem.new(inset: true) { "Hide Sidebar" } %>
            <% end %>
          <% end %>

          <!-- Profiles Menu -->
          <%= render UI::MenubarMenu.new do %>
            <%= render UI::MenubarTrigger.new { "Profiles" } %>
            <%= render UI::MenubarContent.new do %>
              <%= render UI::MenubarRadioGroup.new(value: "benoit") do %>
                <%= render UI::MenubarRadioItem.new(value: "andy") { "Andy" } %>
                <%= render UI::MenubarRadioItem.new(value: "benoit", checked: true) { "Benoit" } %>
                <%= render UI::MenubarRadioItem.new(value: "luis") { "Luis" } %>
              <% end %>
              <%= render UI::MenubarSeparator.new %>
              <%= render UI::MenubarItem.new(inset: true) { "Edit..." } %>
              <%= render UI::MenubarSeparator.new %>
              <%= render UI::MenubarItem.new(inset: true) { "Add Profile..." } %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>

