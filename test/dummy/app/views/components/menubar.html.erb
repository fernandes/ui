<div class="container mx-auto py-8 space-y-8">
  <div>
    <h1 class="text-3xl font-bold mb-2">Menubar</h1>
    <p class="text-muted-foreground">A visually persistent menu common in desktop applications that provides quick access to a consistent set of commands.</p>
  </div>

  <!-- Phlex Examples -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold">Phlex</h2>

    <div class="space-y-6">
      <!-- Basic Example (shadcn reference) -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Complete Example</h3>
        <%= render UI::Menubar::Menubar.new do %>
          <!-- File Menu -->
          <%= render UI::Menubar::Menu.new do %>
            <%= render UI::Menubar::Trigger.new { "File" } %>
            <%= render UI::Menubar::Content.new do %>
              <%= render UI::Menubar::Item.new do %>
                New Tab
                <%= render UI::Menubar::Shortcut.new { "⌘T" } %>
              <% end %>
              <%= render UI::Menubar::Item.new do %>
                New Window
                <%= render UI::Menubar::Shortcut.new { "⌘N" } %>
              <% end %>
              <%= render UI::Menubar::Item.new(disabled: true) { "New Incognito Window" } %>
              <%= render UI::Menubar::Separator.new %>
              <%= render UI::Menubar::Sub.new do %>
                <%= render UI::Menubar::SubTrigger.new { "Share" } %>
                <%= render UI::Menubar::SubContent.new do %>
                  <%= render UI::Menubar::Item.new { "Email link" } %>
                  <%= render UI::Menubar::Item.new { "Messages" } %>
                  <%= render UI::Menubar::Item.new { "Notes" } %>
                <% end %>
              <% end %>
              <%= render UI::Menubar::Separator.new %>
              <%= render UI::Menubar::Item.new do %>
                Print...
                <%= render UI::Menubar::Shortcut.new { "⌘P" } %>
              <% end %>
            <% end %>
          <% end %>

          <!-- Edit Menu -->
          <%= render UI::Menubar::Menu.new do %>
            <%= render UI::Menubar::Trigger.new { "Edit" } %>
            <%= render UI::Menubar::Content.new do %>
              <%= render UI::Menubar::Item.new do %>
                Undo
                <%= render UI::Menubar::Shortcut.new { "⌘Z" } %>
              <% end %>
              <%= render UI::Menubar::Item.new do %>
                Redo
                <%= render UI::Menubar::Shortcut.new { "⇧⌘Z" } %>
              <% end %>
              <%= render UI::Menubar::Separator.new %>
              <%= render UI::Menubar::Sub.new do %>
                <%= render UI::Menubar::SubTrigger.new { "Find" } %>
                <%= render UI::Menubar::SubContent.new do %>
                  <%= render UI::Menubar::Item.new { "Search the web" } %>
                  <%= render UI::Menubar::Separator.new %>
                  <%= render UI::Menubar::Item.new { "Find..." } %>
                  <%= render UI::Menubar::Item.new { "Find Next" } %>
                  <%= render UI::Menubar::Item.new { "Find Previous" } %>
                <% end %>
              <% end %>
              <%= render UI::Menubar::Separator.new %>
              <%= render UI::Menubar::Item.new { "Cut" } %>
              <%= render UI::Menubar::Item.new { "Copy" } %>
              <%= render UI::Menubar::Item.new { "Paste" } %>
            <% end %>
          <% end %>

          <!-- View Menu -->
          <%= render UI::Menubar::Menu.new do %>
            <%= render UI::Menubar::Trigger.new { "View" } %>
            <%= render UI::Menubar::Content.new do %>
              <%= render UI::Menubar::CheckboxItem.new(checked: true) { "Always Show Bookmarks Bar" } %>
              <%= render UI::Menubar::CheckboxItem.new { "Always Show Full URLs" } %>
              <%= render UI::Menubar::Separator.new %>
              <%= render UI::Menubar::Item.new(inset: true) do %>
                Reload
                <%= render UI::Menubar::Shortcut.new { "⌘R" } %>
              <% end %>
              <%= render UI::Menubar::Item.new(inset: true, disabled: true) do %>
                Force Reload
                <%= render UI::Menubar::Shortcut.new { "⇧⌘R" } %>
              <% end %>
              <%= render UI::Menubar::Separator.new %>
              <%= render UI::Menubar::Item.new(inset: true) { "Toggle Fullscreen" } %>
              <%= render UI::Menubar::Separator.new %>
              <%= render UI::Menubar::Item.new(inset: true) { "Hide Sidebar" } %>
            <% end %>
          <% end %>

          <!-- Profiles Menu -->
          <%= render UI::Menubar::Menu.new do %>
            <%= render UI::Menubar::Trigger.new { "Profiles" } %>
            <%= render UI::Menubar::Content.new do %>
              <%= render UI::Menubar::RadioGroup.new(value: "benoit") do %>
                <%= render UI::Menubar::RadioItem.new(value: "andy") { "Andy" } %>
                <%= render UI::Menubar::RadioItem.new(value: "benoit", checked: true) { "Benoit" } %>
                <%= render UI::Menubar::RadioItem.new(value: "luis") { "Luis" } %>
              <% end %>
              <%= render UI::Menubar::Separator.new %>
              <%= render UI::Menubar::Item.new(inset: true) { "Edit..." } %>
              <%= render UI::Menubar::Separator.new %>
              <%= render UI::Menubar::Item.new(inset: true) { "Add Profile..." } %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>

