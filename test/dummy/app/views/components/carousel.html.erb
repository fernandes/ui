<div class="container mx-auto space-y-12 p-8">
  <div class="space-y-2">
    <h1 class="text-4xl font-bold">Carousel</h1>
    <p class="text-lg text-muted-foreground">
      A carousel built with Embla Carousel.
    </p>
  </div>

  <%= render UI::H2.new { "ERB" } %>

  <%# Example 1: Basic Carousel %>
  <div class="space-y-4 rounded-lg border p-6">
    <div class="space-y-2">
      <h2 class="text-2xl font-semibold">Basic Carousel</h2>
      <p class="text-sm text-muted-foreground">
        A simple carousel with previous and next buttons.
      </p>
    </div>

    <div class="mx-auto w-full max-w-xs">
      <%= render "ui/carousel/carousel", attributes: { id: "erb-basic-carousel" } do %>
        <%= render "ui/carousel/content" do %>
          <% 5.times do |i| %>
            <%= render "ui/carousel/item" do %>
              <div class="p-1">
                <div class="flex aspect-square items-center justify-center p-6 border rounded-lg">
                  <span class="text-4xl font-semibold"><%= i + 1 %></span>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
        <%= render "ui/carousel/previous" %>
        <%= render "ui/carousel/next" %>
      <% end %>
    </div>
  </div>

  <%# Example 2: Sizes %>
  <div class="space-y-4 rounded-lg border p-6">
    <div class="space-y-2">
      <h2 class="text-2xl font-semibold">Sizes</h2>
      <p class="text-sm text-muted-foreground">
        Set the size of an item using the `classes` prop on the CarouselItem.
      </p>
    </div>

    <div class="mx-auto w-full max-w-sm">
      <%= render "ui/carousel/carousel", attributes: { id: "erb-sizes-carousel" } do %>
        <%= render "ui/carousel/content" do %>
          <% 5.times do |i| %>
            <%= render "ui/carousel/item", classes: "md:basis-1/2 lg:basis-1/3" do %>
              <div class="p-1">
                <div class="flex aspect-square items-center justify-center p-6 border rounded-lg">
                  <span class="text-3xl font-semibold"><%= i + 1 %></span>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
        <%= render "ui/carousel/previous" %>
        <%= render "ui/carousel/next" %>
      <% end %>
    </div>
  </div>

  <%# Example 3: Spacing %>
  <div class="space-y-4 rounded-lg border p-6">
    <div class="space-y-2">
      <h2 class="text-2xl font-semibold">Spacing</h2>
      <p class="text-sm text-muted-foreground">
        Use the `classes` prop to adjust the spacing between items.
      </p>
    </div>

    <div class="mx-auto w-full max-w-xs">
      <%= render "ui/carousel/carousel", attributes: { id: "erb-spacing-carousel" }, classes: "w-full max-w-sm" do %>
        <%= render "ui/carousel/content", classes: "-ml-1" do %>
          <% 5.times do |i| %>
            <%= render "ui/carousel/item", classes: "pl-1" do %>
              <div class="p-1">
                <div class="flex aspect-square items-center justify-center p-6 border rounded-lg">
                  <span class="text-2xl font-semibold"><%= i + 1 %></span>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
        <%= render "ui/carousel/previous" %>
        <%= render "ui/carousel/next" %>
      <% end %>
    </div>
  </div>

  <%# Example 4: Orientation %>
  <div class="space-y-4 rounded-lg border p-6">
    <div class="space-y-2">
      <h2 class="text-2xl font-semibold">Orientation</h2>
      <p class="text-sm text-muted-foreground">
        Use the `orientation` prop to set the orientation of the carousel.
      </p>
    </div>

    <div class="mx-auto w-full max-w-xs py-16">
      <%= render "ui/carousel/carousel", attributes: { id: "erb-orientation-carousel" }, orientation: "vertical", classes: "w-full max-w-xs", opts: { align: "start" } do %>
        <%= render "ui/carousel/content", classes: "-mt-1 h-[200px]" do %>
          <% 5.times do |i| %>
            <%= render "ui/carousel/item", classes: "pt-1 md:basis-1/2" do %>
              <div class="p-1">
                <div class="flex items-center justify-center p-6 border rounded-lg min-h-[120px]">
                  <span class="text-3xl font-semibold"><%= i + 1 %></span>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
        <%= render "ui/carousel/previous" %>
        <%= render "ui/carousel/next" %>
      <% end %>
    </div>
  </div>

  <%# Example 5: Autoplay with Loop %>
  <div class="space-y-4 rounded-lg border p-6">
    <div class="space-y-2">
      <h2 class="text-2xl font-semibold">Autoplay with Loop</h2>
      <p class="text-sm text-muted-foreground">
        Use plugins to enable autoplay and loop functionality.
      </p>
    </div>

    <div class="mx-auto w-full max-w-xs">
      <%= render "ui/carousel/carousel",
        attributes: { id: "erb-autoplay-carousel" },
        opts: { loop: true },
        plugins: [
          { name: "autoplay", options: { delay: 2000, stopOnInteraction: false } }
        ] do %>
