<!DOCTYPE html>
<html>
<head>
  <title>Alert Component Showcase</title>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>
<body class="p-8 bg-background text-foreground">
  <div class="max-w-4xl mx-auto space-y-12">
    <header>
      <h1 class="text-4xl font-bold mb-2">Alert Component</h1>
      <p class="text-muted-foreground text-lg">A callout component for displaying important messages and notifications</p>
    </header>

    <!-- Phlex Implementation -->
    <section class="space-y-6">
      <h2 class="text-2xl font-semibold border-b pb-2">Phlex Implementation</h2>

      <div class="space-y-4">
        <h3 class="text-xl font-medium">Default Variant</h3>
        <%= render UI::Alert.new do %>
          <%= lucide_icon("circle-check") %>
          <%= render UI::AlertTitle.new { "Success" } %>
          <%= render UI::AlertDescription.new { "Your changes have been saved successfully." } %>
        <% end %>
      </div>

      <div class="space-y-4">
        <h3 class="text-xl font-medium">Destructive Variant</h3>
        <%= render UI::Alert.new(variant: :destructive) do %>
          <%= lucide_icon("circle-alert") %>
          <%= render UI::AlertTitle.new { "Error" } %>
          <%= render UI::AlertDescription.new { "Your session has expired. Please log in again." } %>
        <% end %>
      </div>

      <div class="space-y-4">
        <h3 class="text-xl font-medium">Without Icon</h3>
        <%= render UI::Alert.new do %>
          <%= render UI::AlertTitle.new { "Heads up!" } %>
          <%= render UI::AlertDescription.new { "You can add components to your app using the CLI." } %>
        <% end %>
      </div>

      <div class="space-y-4">
        <h3 class="text-xl font-medium">Without Title</h3>
        <%= render UI::Alert.new do %>
          <%= render UI::AlertDescription.new { "This is a simple notification without a title." } %>
        <% end %>
      </div>

      <div class="space-y-4">
        <h3 class="text-xl font-medium">Warning</h3>
        <%= render UI::Alert.new(variant: :destructive) do %>
          <%= lucide_icon("triangle-alert") %>
          <%= render UI::AlertTitle.new { "Warning" } %>
          <%= render UI::AlertDescription.new { "This action cannot be undone. Please proceed with caution." } %>
        <% end %>
      </div>

      <div class="space-y-4">
        <h3 class="text-xl font-medium">Info</h3>
        <%= render UI::Alert.new do %>
          <%= lucide_icon("info") %>
          <%= render UI::AlertTitle.new { "Did you know?" } %>
          <%= render UI::AlertDescription.new { "You can use keyboard shortcuts to navigate faster through the application." } %>
        <% end %>
      </div>
    </section>

    <!-- ViewComponent Implementation -->
    <section class="space-y-6">
      <h2 class="text-2xl font-semibold border-b pb-2">ViewComponent Implementation</h2>

      <div class="space-y-4">
        <h3 class="text-xl font-medium">Default Variant</h3>
        <%= render(UI::AlertComponent.new) do %>
          <%= lucide_icon("circle-check") %>
          <%= render(UI::AlertTitleComponent.new) { "Success" } %>
          <%= render(UI::AlertDescriptionComponent.new) { "Your operation completed successfully." } %>
        <% end %>
      </div>

      <div class="space-y-4">
        <h3 class="text-xl font-medium">Destructive Variant</h3>
        <%= render(UI::AlertComponent.new(variant: :destructive)) do %>
          <%= lucide_icon("circle-alert") %>
          <%= render(UI::AlertTitleComponent.new) { "Error" } %>
          <%= render(UI::AlertDescriptionComponent.new) { "An error occurred while processing your request." } %>
        <% end %>
      </div>
    </section>

    <!-- ERB Partial Implementation -->
    <section class="space-y-6">
      <h2 class="text-2xl font-semibold border-b pb-2">ERB Partial Implementation</h2>

      <div class="space-y-4">
        <h3 class="text-xl font-medium">Default Variant</h3>
        <%= render "ui/alert", variant: :default do %>
          <%= lucide_icon("circle-check") %>
          <%= render "ui/alert/title" do %>Success<% end %>
          <%= render "ui/alert/description" do %>Your settings have been updated.<% end %>
        <% end %>
      </div>

      <div class="space-y-4">
        <h3 class="text-xl font-medium">Destructive Variant</h3>
        <%= render "ui/alert", variant: :destructive do %>
          <%= lucide_icon("circle-alert") %>
          <%= render "ui/alert/title" do %>Error<% end %>
          <%= render "ui/alert/description" do %>Failed to save your changes. Please try again.<% end %>
        <% end %>
      </div>
    </section>

    <!-- All Examples Together -->
    <section class="space-y-6">
      <h2 class="text-2xl font-semibold border-b pb-2">All Variants Together</h2>
      <div class="space-y-4">
        <%= render UI::Alert.new do %>
          <%= render UI::AlertTitle.new { "Information" } %>
          <%= render UI::AlertDescription.new { "This is a default informational alert." } %>
        <% end %>

        <%= render UI::Alert.new(variant: :destructive) do %>
          <%= render UI::AlertTitle.new { "Critical" } %>
          <%= render UI::AlertDescription.new { "This is a destructive/error alert." } %>
        <% end %>

        <%= render UI::Alert.new do %>
          <%= render UI::AlertDescription.new { "Simple message without title." } %>
        <% end %>
      </div>
    </section>

    <!-- Custom Styling -->
    <section class="space-y-6">
      <h2 class="text-2xl font-semibold border-b pb-2">Custom Styling</h2>
      <div class="space-y-4">
        <%= render UI::Alert.new(classes: "border-blue-500 bg-blue-50 dark:bg-blue-950/20") do %>
          <%= lucide_icon("info", class: "text-blue-600") %>
          <%= render UI::AlertTitle.new(classes: "text-blue-900 dark:text-blue-100") { "Custom Blue Alert" } %>
          <%= render UI::AlertDescription.new(classes: "text-blue-700 dark:text-blue-300") { "This alert uses custom Tailwind classes for blue styling." } %>
        <% end %>

        <%= render UI::Alert.new(classes: "border-green-500 bg-green-50 dark:bg-green-950/20") do %>
          <%= lucide_icon("circle-check", class: "text-green-600") %>
          <%= render UI::AlertTitle.new(classes: "text-green-900 dark:text-green-100") { "Custom Green Alert" } %>
          <%= render UI::AlertDescription.new(classes: "text-green-700 dark:text-green-300") { "This alert uses custom Tailwind classes for success green styling." } %>
        <% end %>
      </div>
    </section>

    <footer class="pt-8 border-t">
      <p class="text-muted-foreground text-sm">
        <%= link_to "â† Back to Components", "/components", class: "hover:underline" %>
      </p>
    </footer>
  </div>
</body>
</html>
