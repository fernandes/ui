<!DOCTYPE html>
<html>
<head>
  <title>Label Component Showcase</title>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>
<body class="p-8 bg-background text-foreground">
  <div class="max-w-4xl mx-auto space-y-12">
    <header>
      <h1 class="text-4xl font-bold mb-2">Label Component</h1>
      <p class="text-muted-foreground">Accessible label for form inputs</p>
    </header>

    <!-- Phlex Implementation -->
    <section class="space-y-6">
      <h2 class="text-2xl font-semibold">Phlex Implementation</h2>

      <!-- Basic label with input -->
      <div class="space-y-2">
        <h3 class="text-sm font-medium text-muted-foreground">Basic Label with Input</h3>
        <div class="space-y-2 max-w-sm">
          <%= render UI::Label.new(for_id: "email-phlex") { "Email address" } %>
          <%= render UI::Input.new(type: "email", id: "email-phlex", placeholder: "john@example.com") %>
        </div>
      </div>

      <!-- Label with checkbox -->
      <div class="space-y-2">
        <h3 class="text-sm font-medium text-muted-foreground">Label with Checkbox</h3>
        <div class="flex items-center space-x-2">
          <%= render UI::Checkbox.new(id: "terms-phlex", name: "terms", value: "accepted") %>
          <%= render UI::Label.new(for_id: "terms-phlex", classes: "cursor-pointer") { "Accept terms and conditions" } %>
        </div>
      </div>

      <!-- Label with radio button -->
      <div class="space-y-2">
        <h3 class="text-sm font-medium text-muted-foreground">Label with Radio Buttons</h3>
        <div class="space-y-2">
          <div class="flex items-center space-x-2">
            <%= render UI::RadioButton.new(id: "option1-phlex", name: "options-phlex", value: "1") %>
            <%= render UI::Label.new(for_id: "option1-phlex", classes: "cursor-pointer") { "Option 1" } %>
          </div>
          <div class="flex items-center space-x-2">
            <%= render UI::RadioButton.new(id: "option2-phlex", name: "options-phlex", value: "2") %>
            <%= render UI::Label.new(for_id: "option2-phlex", classes: "cursor-pointer") { "Option 2" } %>
          </div>
        </div>
      </div>

      <!-- Label with custom styling -->
      <div class="space-y-2">
        <h3 class="text-sm font-medium text-muted-foreground">Label with Custom Styling</h3>
        <div class="space-y-2 max-w-sm">
          <%= render UI::Label.new(for_id: "password-phlex", classes: "text-destructive font-bold") { "Password (required)" } %>
          <%= render UI::Input.new(type: "password", id: "password-phlex") %>
        </div>
      </div>

      <!-- Label with disabled input -->
      <div class="space-y-2">
        <h3 class="text-sm font-medium text-muted-foreground">Label with Disabled Input</h3>
        <div class="space-y-2 max-w-sm">
          <%= render UI::Label.new(for_id: "disabled-phlex", classes: "peer-disabled:cursor-not-allowed peer-disabled:opacity-70") { "Disabled field" } %>
          <%= render UI::Input.new(type: "text", id: "disabled-phlex", value: "Cannot edit", readonly: true) %>
        </div>
      </div>
    </section>

    <!-- ERB Partial Implementation -->
    <section class="space-y-6">
      <h2 class="text-2xl font-semibold">ERB Partial Implementation</h2>

      <!-- Basic label with input -->
      <div class="space-y-2">
        <h3 class="text-sm font-medium text-muted-foreground">Basic Label with Input</h3>
        <div class="space-y-2 max-w-sm">
          <%= render "ui/label", for_id: "username-erb", content: "Username" %>
          <%= render "ui/input", type: "text", id: "username-erb", placeholder: "johndoe" %>
        </div>
      </div>

      <!-- Label with checkbox -->
      <div class="space-y-2">
        <h3 class="text-sm font-medium text-muted-foreground">Label with Checkbox</h3>
        <div class="flex items-center space-x-2">
          <%= render "ui/checkbox", id: "newsletter-erb", name: "newsletter", value: "yes" %>
          <%= render "ui/label", for_id: "newsletter-erb", classes: "cursor-pointer", content: "Subscribe to newsletter" %>
        </div>
      </div>

      <!-- Label with block content -->
      <div class="space-y-2">
        <h3 class="text-sm font-medium text-muted-foreground">Label with Required Indicator</h3>
        <div class="space-y-2 max-w-sm">
          <%= render "ui/label", for_id: "email-required-erb" do %>
            Email <span class="text-destructive">*</span>
          <% end %>
          <%= render "ui/input", type: "email", id: "email-required-erb", placeholder: "john@example.com" %>
        </div>
      </div>
    </section>

    <!-- ViewComponent Implementation -->
    <section class="space-y-6">
      <h2 class="text-2xl font-semibold">ViewComponent Implementation</h2>

      <!-- Basic label with input -->
      <div class="space-y-2">
        <h3 class="text-sm font-medium text-muted-foreground">Basic Label with Input</h3>
        <div class="space-y-2 max-w-sm">
          <%= render UI::LabelComponent.new(for_id: "phone-vc") do %>
            Phone number
          <% end %>
          <%= render UI::InputComponent.new(type: "tel", id: "phone-vc", placeholder: "+1 (555) 000-0000") %>
        </div>
      </div>

      <!-- Label with radio buttons -->
      <div class="space-y-2">
        <h3 class="text-sm font-medium text-muted-foreground">Label with Radio Buttons</h3>
        <div class="space-y-2">
          <div class="flex items-center space-x-2">
            <%= render UI::RadioButtonComponent.new(id: "size-small-vc", name: "size-vc", value: "small") %>
            <%= render UI::LabelComponent.new(for_id: "size-small-vc", classes: "cursor-pointer") do %>Small<% end %>
          </div>
          <div class="flex items-center space-x-2">
            <%= render UI::RadioButtonComponent.new(id: "size-medium-vc", name: "size-vc", value: "medium") %>
            <%= render UI::LabelComponent.new(for_id: "size-medium-vc", classes: "cursor-pointer") do %>Medium<% end %>
          </div>
          <div class="flex items-center space-x-2">
            <%= render UI::RadioButtonComponent.new(id: "size-large-vc", name: "size-vc", value: "large") %>
            <%= render UI::LabelComponent.new(for_id: "size-large-vc", classes: "cursor-pointer") do %>Large<% end %>
          </div>
        </div>
      </div>

      <!-- Label with helper text -->
      <div class="space-y-2">
        <h3 class="text-sm font-medium text-muted-foreground">Label with Helper Text</h3>
        <div class="space-y-1 max-w-sm">
          <%= render UI::LabelComponent.new(for_id: "password-vc") do %>
            Password
          <% end %>
          <%= render UI::InputComponent.new(type: "password", id: "password-vc") %>
          <p class="text-sm text-muted-foreground">Must be at least 8 characters</p>
        </div>
      </div>
    </section>

    <!-- Navigation -->
    <footer class="pt-8 border-t">
      <%= link_to "â† Back to Components", components_path, class: "text-sm text-muted-foreground hover:text-foreground" %>
    </footer>
  </div>
</body>
</html>
