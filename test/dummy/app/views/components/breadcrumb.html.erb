              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <!-- With Custom Separator -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">With Custom Separator</h3>
        <%= render UI::BreadcrumbComponent.new do %>
          <%= render UI::BreadcrumbListComponent.new do %>
            <%= render UI::BreadcrumbItemComponent.new do %>
              <%= render UI::BreadcrumbLinkComponent.new(href: "/") do %>
                Home
              <% end %>
            <% end %>
            <%= render UI::BreadcrumbSeparatorComponent.new do %>
              <span class="text-muted-foreground">•</span>
            <% end %>
            <%= render UI::BreadcrumbItemComponent.new do %>
              <%= render UI::BreadcrumbLinkComponent.new(href: "/dashboard") do %>
                Dashboard
              <% end %>
            <% end %>
            <%= render UI::BreadcrumbSeparatorComponent.new do %>
              <span class="text-muted-foreground">•</span>
            <% end %>
            <%= render UI::BreadcrumbItemComponent.new do %>
              <%= render UI::BreadcrumbPageComponent.new do %>
                Settings
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>
</div>
