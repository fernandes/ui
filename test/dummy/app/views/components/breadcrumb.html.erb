                Home
              <% end %>
            <% end %>
            <%= render "ui/breadcrumb/separator" %>
            <%= render "ui/breadcrumb/item" do %>
              <%= render "ui/breadcrumb/link", href: "/components" do %>
                Components
              <% end %>
            <% end %>
            <%= render "ui/breadcrumb/separator" %>
            <%= render "ui/breadcrumb/item" do %>
              <%= render "ui/breadcrumb/page" do %>
                Breadcrumb
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <!-- With Custom Separator -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">With Custom Separator</h3>
        <%= render "ui/breadcrumb" do %>
          <%= render "ui/breadcrumb/list" do %>
            <%= render "ui/breadcrumb/item" do %>
              <%= render "ui/breadcrumb/link", href: "/" do %>
                Home
              <% end %>
            <% end %>
            <%= render "ui/breadcrumb/separator" do %>
              <span class="text-muted-foreground">→</span>
            <% end %>
            <%= render "ui/breadcrumb/item" do %>
              <%= render "ui/breadcrumb/link", href: "/library" do %>
                Library
              <% end %>
            <% end %>
            <%= render "ui/breadcrumb/separator" do %>
              <span class="text-muted-foreground">→</span>
            <% end %>
            <%= render "ui/breadcrumb/item" do %>
              <%= render "ui/breadcrumb/page" do %>
                Data
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>

  <!-- ViewComponent Examples -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold">ViewComponent</h2>

    <div class="space-y-6">
