<!DOCTYPE html>
<html>
<head>
  <title>Checkbox Component Showcase</title>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>
<body class="p-8 bg-background text-foreground">
  <div class="max-w-4xl mx-auto space-y-12">
    <header>
      <h1 class="text-4xl font-bold mb-2">Checkbox Component</h1>
      <p class="text-muted-foreground">Checkbox input with custom styling and animated checkmark indicator</p>
    </header>

    <!-- Phlex Implementation -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Phlex Implementation</h2>
      <div class="flex flex-col gap-4">
        <div class="flex items-center space-x-2">
          <%= render UI::Checkbox.new(id: "checkbox-1", name: "terms", value: "accepted") %>
          <%= render UI::Label.new(for: "checkbox-1") { "Accept terms and conditions" } %>
        </div>
        <div class="flex items-center space-x-2">
          <%= render UI::Checkbox.new(id: "checkbox-2", name: "subscribe", value: "yes", checked: true) %>
          <%= render UI::Label.new(for: "checkbox-2") { "Subscribe to newsletter (checked)" } %>
        </div>
        <div class="flex items-center space-x-2">
          <%= render UI::Checkbox.new(id: "checkbox-3", name: "disabled", value: "yes", disabled: true) %>
          <%= render UI::Label.new(for: "checkbox-3") { "Disabled checkbox" } %>
        </div>
      </div>
    </section>

    <!-- ViewComponent Implementation -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">ViewComponent Implementation</h2>
      <div class="flex flex-col gap-4">
        <div class="flex items-center space-x-2">
          <%= render UI::CheckboxComponent.new(id: "vc-1", name: "option1", value: "1") %>
          <%= render UI::LabelComponent.new(for: "vc-1") do %>Option 1<% end %>
        </div>
        <div class="flex items-center space-x-2">
          <%= render UI::CheckboxComponent.new(id: "vc-2", name: "option2", value: "2", checked: true) %>
          <%= render UI::LabelComponent.new(for: "vc-2") do %>Option 2 (checked)<% end %>
        </div>
        <div class="flex items-center space-x-2">
          <%= render UI::CheckboxComponent.new(id: "vc-3", name: "option3", value: "3") %>
          <%= render UI::LabelComponent.new(for: "vc-3") do %>Option 3<% end %>
        </div>
      </div>
    </section>

    <!-- ERB Partial Implementation -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">ERB Partial Implementation</h2>
      <div class="flex flex-col gap-4">
        <div class="flex items-center space-x-2">
          <%= render "ui/checkbox", id: "basic-checkbox", name: "terms", value: "accepted" %>
          <%= render "ui/label", for: "basic-checkbox" do %>Accept terms and conditions<% end %>
        </div>
        <div class="flex items-center space-x-2">
          <%= render "ui/checkbox", id: "checked-checkbox", name: "subscribe", value: "yes", checked: true %>
          <%= render "ui/label", for: "checked-checkbox" do %>Subscribe to newsletter (checked)<% end %>
        </div>
        <div class="flex items-center space-x-2">
          <%= render "ui/checkbox", id: "disabled-checkbox", name: "disabled", value: "yes", disabled: true %>
          <%= render "ui/label", for: "disabled-checkbox" do %>Disabled checkbox<% end %>
        </div>
      </div>
    </section>

    <!-- With Description -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">With Description (Phlex)</h2>
      <div class="items-top flex space-x-2">
        <%= render UI::Checkbox.new(id: "terms-desc", name: "terms", value: "accepted") %>
        <div class="grid gap-1.5 leading-none">
          <%= render UI::Label.new(
            for: "terms-desc",
            classes: "text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70"
          ) { "Accept terms and conditions" } %>
          <p class="text-sm text-muted-foreground">
            You agree to our Terms of Service and Privacy Policy.
          </p>
        </div>
      </div>
    </section>

    <!-- Checkbox Group -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Checkbox Group (ViewComponent)</h2>
      <div class="space-y-3">
        <label class="text-sm font-medium">Select your interests:</label>
        <div class="space-y-2">
          <div class="flex items-center space-x-2">
            <%= render UI::CheckboxComponent.new(id: "interest-technology", name: "interests[]", value: "technology") %>
            <%= render UI::LabelComponent.new(for: "interest-technology") do %>Technology<% end %>
          </div>
          <div class="flex items-center space-x-2">
            <%= render UI::CheckboxComponent.new(id: "interest-design", name: "interests[]", value: "design") %>
            <%= render UI::LabelComponent.new(for: "interest-design") do %>Design<% end %>
          </div>
          <div class="flex items-center space-x-2">
            <%= render UI::CheckboxComponent.new(id: "interest-3", name: "interests[]", value: "marketing") %>
            <%= render UI::LabelComponent.new(for: "interest-3") do %>Marketing<% end %>
          </div>
          <div class="flex items-center space-x-2">
            <%= render UI::CheckboxComponent.new(id: "interest-4", name: "interests[]", value: "sales") %>
            <%= render UI::LabelComponent.new(for: "interest-4") do %>Sales<% end %>
          </div>
        </div>
      </div>
    </section>

    <!-- Form Example -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Form Example (ERB)</h2>
      <form class="space-y-6 max-w-md">
        <div class="space-y-4">
          <div class="flex items-center space-x-2">
            <%= render "ui/checkbox", id: "form-newsletter", name: "user[newsletter]", value: "1" %>
            <%= render "ui/label", for: "form-newsletter" do %>
              Send me newsletter updates
            <% end %>
          </div>
          <div class="flex items-center space-x-2">
            <%= render "ui/checkbox", id: "form-marketing", name: "user[marketing]", value: "1" %>
            <%= render "ui/label", for: "form-marketing" do %>
              Send me marketing emails
            <% end %>
          </div>
          <div class="flex items-center space-x-2">
            <%= render "ui/checkbox", id: "form-updates", name: "user[updates]", value: "1", checked: true %>
            <%= render "ui/label", for: "form-updates" do %>
              Send me product updates
            <% end %>
          </div>
        </div>
        <%= render UI::Button.new(type: "submit") { "Save Preferences" } %>
      </form>
    </section>

    <!-- Interactive Demo -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Interactive Demo (Phlex)</h2>
      <p class="text-sm text-muted-foreground">Click the checkboxes to see the state change animation</p>
      <div class="flex flex-wrap gap-8">
        <div class="flex items-center space-x-2">
          <%= render UI::Checkbox.new(id: "demo-1", name: "demo", value: "1") %>
          <%= render UI::Label.new(for: "demo-1") { "Option A" } %>
        </div>
        <div class="flex items-center space-x-2">
          <%= render UI::Checkbox.new(id: "demo-2", name: "demo", value: "2") %>
          <%= render UI::Label.new(for: "demo-2") { "Option B" } %>
        </div>
        <div class="flex items-center space-x-2">
          <%= render UI::Checkbox.new(id: "demo-3", name: "demo", value: "3") %>
          <%= render UI::Label.new(for: "demo-3") { "Option C" } %>
        </div>
      </div>
    </section>

    <!-- Navigation -->
    <footer class="pt-8 border-t">
      <%= link_to "â† Back to Components", components_path, class: "text-sm text-muted-foreground hover:text-foreground" %>
    </footer>
  </div>
</body>
</html>
