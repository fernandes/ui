<div class="space-y-12">
  <div class="space-y-2">
    <h1 class="text-3xl font-bold">Drawer</h1>
    <p class="text-muted-foreground">
      A mobile-first component that slides in from the edge of the screen with gesture-based drag-to-close.
    </p>
  </div>

  <!-- ========================================
       DEFAULT (BOTTOM)
       ======================================== -->
  <section class="space-y-6">
    <div class="space-y-2">
      <h2 class="text-2xl font-semibold">Default (Bottom)</h2>
      <p class="text-sm text-muted-foreground">Drawer slides in from the bottom with drag-to-close gesture.</p>
    </div>

    <!-- Phlex -->
    <div class="space-y-2">
      <h3 class="text-lg font-medium">Phlex</h3>
      <%= render UI::Drawer.new(id: "drawer-default-phlex") do %>
        <%= render UI::DrawerTrigger.new do %>
          Open Drawer (Phlex)
        <% end %>
        <%= render UI::DrawerOverlay.new %>
        <%= render UI::DrawerContent.new do %>
          <%= render UI::DrawerHandle.new %>
          <%= render UI::DrawerHeader.new do %>
            <%= render UI::DrawerTitle.new { "Move Goal" } %>
            <%= render UI::DrawerDescription.new { "Set your daily activity goal." } %>
          <% end %>
          <div class="p-4">
            <div class="grid gap-4">
              <div class="space-y-2">
                <%= render UI::Label.new(for: "goal-phlex") { "Goal (minutes)" } %>
                <%= render UI::Input.new(id: "goal-phlex", type: "number", value: "350") %>
              </div>
            </div>
          </div>
          <%= render UI::DrawerFooter.new do %>
            <%= render UI::Button.new { "Submit" } %>
            <%= render UI::DrawerClose.new { "Cancel" } %>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <!-- ERB -->
    <div class="space-y-2">
      <h3 class="text-lg font-medium">ERB</h3>
      <%= render "ui/drawer", attributes: { id: "drawer-default-erb" } do %>
        <%= render "ui/drawer/trigger" do %>
          Open Drawer (ERB)
        <% end %>
        <%= render "ui/drawer/overlay" %>
        <%= render "ui/drawer/content" do %>
          <%= render "ui/drawer/handle" %>
          <%= render "ui/drawer/header" do %>
            <%= render "ui/drawer/title" do %>
              Move Goal
            <% end %>
            <%= render "ui/drawer/description" do %>
              Set your daily activity goal.
            <% end %>
          <% end %>
          <div class="p-4">
            <div class="grid gap-4">
              <div class="space-y-2">
                <%= render "ui/label", for: "goal-erb" do %>Goal (minutes)<% end %>
                <%= render "ui/input", id: "goal-erb", type: "number", value: "350" %>
              </div>
            </div>
          </div>
          <%= render "ui/drawer/footer" do %>
            <%= render "ui/button", variant: :default do %>
              Submit
            <% end %>
            <%= render "ui/drawer/close" do %>
              Cancel
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <!-- ViewComponent -->
    <div class="space-y-2">
      <h3 class="text-lg font-medium">ViewComponent</h3>
      <%= render UI::DrawerComponent.new(id: "drawer-default-vc") do %>
