<div class="container mx-auto py-8 space-y-8">
  <div>
    <h1 class="text-3xl font-bold mb-2">Separator</h1>
    <p class="text-muted-foreground">Visually or semantically separates content.</p>
  </div>

  <!-- Phlex Examples -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold">Phlex</h2>

    <div class="space-y-6">
      <!-- Basic Example (from shadcn/ui) -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Basic Example</h3>
        <div class="max-w-md">
          <div class="space-y-1">
            <h4 class="text-sm leading-none font-medium">Radix Primitives</h4>
            <p class="text-muted-foreground text-sm">
              An open-source UI component library.
            </p>
          </div>
          <%= render UI::Separator::Separator.new(classes: "my-4") %>
          <div class="flex h-5 items-center space-x-4 text-sm">
            <div>Blog</div>
            <%= render UI::Separator::Separator.new(orientation: :vertical) %>
            <div>Docs</div>
            <%= render UI::Separator::Separator.new(orientation: :vertical) %>
            <div>Source</div>
          </div>
        </div>
      </div>

      <!-- Horizontal Separator -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Horizontal Separator (Default)</h3>
        <div class="max-w-md">
          <p class="text-sm">Content above the separator</p>
          <%= render UI::Separator::Separator.new(classes: "my-4") %>
          <p class="text-sm">Content below the separator</p>
        </div>
      </div>

      <!-- Vertical Separator in Navigation -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Vertical Separator in Navigation</h3>
        <nav class="flex items-center space-x-4 text-sm">
          <a href="#" class="hover:underline">Home</a>
          <%= render UI::Separator::Separator.new(orientation: :vertical, classes: "h-4") %>
          <a href="#" class="hover:underline">About</a>
          <%= render UI::Separator::Separator.new(orientation: :vertical, classes: "h-4") %>
          <a href="#" class="hover:underline">Contact</a>
        </nav>
      </div>

      <!-- With Custom Styling -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">With Custom Styling</h3>
        <div class="max-w-md space-y-4">
          <%= render UI::Separator::Separator.new(classes: "my-4 bg-red-500") %>
          <%= render UI::Separator::Separator.new(classes: "my-4 bg-blue-500 h-0.5") %>
          <%= render UI::Separator::Separator.new(classes: "my-4 bg-gradient-to-r from-transparent via-foreground to-transparent") %>
        </div>
      </div>

      <!-- Semantic Separator (for Screen Readers) -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Semantic Separator (decorative: false)</h3>
        <div class="max-w-md">
          <p class="text-sm">This separator has semantic meaning for screen readers</p>
          <%= render UI::Separator::Separator.new(decorative: false, classes: "my-4") %>
          <p class="text-sm">Screen readers will announce this separation</p>
        </div>
      </div>

      <!-- In Lists -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">In Lists</h3>
        <div class="max-w-md space-y-2">
          <div class="p-2 hover:bg-muted rounded">
            <p class="font-medium">Item 1</p>
            <p class="text-sm text-muted-foreground">Description for item 1</p>
          </div>
          <%= render UI::Separator::Separator.new %>
          <div class="p-2 hover:bg-muted rounded">
            <p class="font-medium">Item 2</p>
            <p class="text-sm text-muted-foreground">Description for item 2</p>
          </div>
          <%= render UI::Separator::Separator.new %>
          <div class="p-2 hover:bg-muted rounded">
            <p class="font-medium">Item 3</p>
            <p class="text-sm text-muted-foreground">Description for item 3</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ERB Partials Examples -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold">ERB Partials</h2>

    <div class="space-y-6">
      <!-- Basic Example -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Basic Example</h3>
        <div class="max-w-md">
          <div class="space-y-1">
            <h4 class="text-sm leading-none font-medium">shadcn/ui</h4>
            <p class="text-muted-foreground text-sm">
              Beautifully designed components.
            </p>
          </div>
          <%= render "ui/separator/separator", classes: "my-4" %>
          <div class="flex h-5 items-center space-x-4 text-sm">
            <div>Examples</div>
            <%= render "ui/separator/separator", orientation: :vertical %>
            <div>Themes</div>
            <%= render "ui/separator/separator", orientation: :vertical %>
            <div>GitHub</div>
          </div>
        </div>
      </div>

      <!-- Horizontal Separator -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Horizontal Separator</h3>
        <div class="max-w-md">
          <p class="text-sm">Content above</p>
          <%= render "ui/separator/separator", classes: "my-4" %>
          <p class="text-sm">Content below</p>
        </div>
      </div>

      <!-- Vertical Separator -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Vertical Separator in Menu</h3>
        <div class="flex items-center space-x-4 text-sm">
          <button type="button" class="hover:text-foreground/80">Settings</button>
          <%= render "ui/separator/separator", orientation: :vertical, classes: "h-4" %>
          <button type="button" class="hover:text-foreground/80">Profile</button>
          <%= render "ui/separator/separator", orientation: :vertical, classes: "h-4" %>
          <button type="button" class="hover:text-foreground/80">Logout</button>
        </div>
      </div>
    </div>
  </section>

  <!-- ViewComponent Examples -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold">ViewComponent</h2>

    <div class="space-y-6">
      <!-- Basic Example -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Basic Example</h3>
        <div class="max-w-md">
          <div class="space-y-1">
            <h4 class="text-sm leading-none font-medium">ViewComponent</h4>
            <p class="text-muted-foreground text-sm">
              A framework for building reusable components.
            </p>
          </div>
          <%= render UI::Separator::SeparatorComponent.new(classes: "my-4") %>
          <div class="flex h-5 items-center space-x-4 text-sm">
            <div>Guide</div>
            <%= render UI::Separator::SeparatorComponent.new(orientation: :vertical) %>
            <div>API</div>
            <%= render UI::Separator::SeparatorComponent.new(orientation: :vertical) %>
            <div>Examples</div>
          </div>
        </div>
      </div>

      <!-- Horizontal Separator -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Horizontal Separator</h3>
        <div class="max-w-md">
          <p class="text-sm">First section</p>
          <%= render UI::Separator::SeparatorComponent.new(classes: "my-4") %>
          <p class="text-sm">Second section</p>
        </div>
      </div>

      <!-- Vertical Separator -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Vertical Separator in Breadcrumb</h3>
        <div class="flex items-center space-x-2 text-sm">
          <a href="#" class="hover:underline">Home</a>
          <%= render UI::Separator::SeparatorComponent.new(orientation: :vertical, classes: "h-4") %>
          <a href="#" class="hover:underline">Components</a>
          <%= render UI::Separator::SeparatorComponent.new(orientation: :vertical, classes: "h-4") %>
          <span class="text-muted-foreground">Separator</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Real-world Examples -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold">Real-world Examples</h2>

    <div class="space-y-6">
      <!-- Card with Sections -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Card with Separated Sections</h3>
        <div class="max-w-md border rounded-lg p-4 space-y-3">
          <div>
            <h4 class="font-medium">User Profile</h4>
            <p class="text-sm text-muted-foreground">Manage your profile information</p>
          </div>
          <%= render UI::Separator::Separator.new %>
          <div class="space-y-2">
            <div class="flex justify-between text-sm">
              <span class="text-muted-foreground">Name</span>
              <span class="font-medium">John Doe</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-muted-foreground">Email</span>
              <span class="font-medium">john@example.com</span>
            </div>
          </div>
          <%= render UI::Separator::Separator.new %>
          <div class="flex gap-2">
            <button class="px-3 py-1.5 text-sm bg-primary text-primary-foreground rounded-md">Save</button>
            <button class="px-3 py-1.5 text-sm border rounded-md">Cancel</button>
          </div>
        </div>
      </div>

      <!-- Inline Menu with Vertical Separators -->
      <div class="space-y-2">
        <h3 class="text-lg font-medium">Inline Action Menu</h3>
        <div class="border rounded-lg p-4">
          <div class="flex items-center justify-between">
            <span class="font-medium">Document.pdf</span>
            <div class="flex items-center gap-2 text-sm">
              <button class="hover:text-primary">Download</button>
              <%= render UI::Separator::Separator.new(orientation: :vertical, classes: "h-4") %>
              <button class="hover:text-primary">Share</button>
              <%= render UI::Separator::Separator.new(orientation: :vertical, classes: "h-4") %>
              <button class="hover:text-destructive">Delete</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
