<%# Dropdown Menu Shortcut Component - Keyboard shortcut indicator %>
<%
  content ||= local_assigns.fetch(:content, nil)
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend UI::DropdownMenuShortcutBehavior

  # Get HTML attributes from behavior
  all_attributes = dropdown_menu_shortcut_html_attributes.deep_merge(@attributes)
-%>
<%= content_tag :span, all_attributes do %>
  <%= content || yield %>
<% end %>
