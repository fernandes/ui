<%# Dropdown Menu Component - Container for dropdown menus %>
<%
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})
  @value = local_assigns.fetch(:value, nil)
  @placement = local_assigns.fetch(:placement, "bottom-start")
  @offset = local_assigns.fetch(:offset, 4)
  @flip = local_assigns.fetch(:flip, true)

  # Extend behavior for shared logic
  extend UI::DropdownMenu::DropdownMenuBehavior

  # Get HTML attributes from behavior
  all_attributes = dropdown_menu_html_attributes.deep_merge(@attributes)
-%>
<%= content_tag :div, all_attributes do %>
  <%= yield %>
<% end %>
