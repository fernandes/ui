<%# Dropdown Menu Sub Trigger Component - Item that opens a submenu %>
<%
  content ||= local_assigns.fetch(:content, nil)
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})
  @inset = local_assigns.fetch(:inset, false)

  # Extend behavior for shared logic
  extend UI::DropdownMenu::DropdownMenuSubTriggerBehavior

  # Get HTML attributes from behavior
  all_attributes = dropdown_menu_sub_trigger_html_attributes.deep_merge(@attributes)
-%>
<%= content_tag :div, all_attributes do %>
  <%= content || yield %>
  <%= lucide_icon("chevron-right", class: "ml-auto h-4 w-4") %>
<% end %>
