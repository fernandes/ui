<%# Menubar Component - Root container with horizontal menu bar %>
<%#
  @example Basic usage
    render "ui/menubar/menubar" do
      render "ui/menubar/menu" do
        render "ui/menubar/trigger" { "File" }
        render "ui/menubar/content" do
          render "ui/menubar/item" { "New" }
        end
      end
    end
%>
<%
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend UI::Menubar::MenubarBehavior

  # Get HTML attributes from behavior
  all_attributes = menubar_html_attributes.deep_merge(@attributes)
-%>
<%= content_tag :div, all_attributes do %>
  <%= yield %>
<% end %>
