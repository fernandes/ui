<%# Menubar Separator Component - Visual separator between menu items %>
<%
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend UI::Menubar::MenubarSeparatorBehavior

  # Get HTML attributes from behavior
  all_attributes = menubar_separator_html_attributes.deep_merge(@attributes)
-%>
<%= content_tag :div, "", all_attributes %>
