<%# TabsTrigger Component - Button that activates associated content %>
<%
  content ||= local_assigns.fetch(:content, nil)
  @value = local_assigns.fetch(:value, "")
  @default_value = local_assigns.fetch(:default_value, @_tabs_default_value || "")
  @orientation = local_assigns.fetch(:orientation, @_tabs_orientation || "horizontal")
  @disabled = local_assigns.fetch(:disabled, false)
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend UI::TabsTriggerBehavior

  # Get HTML attributes from behavior
  all_attributes = trigger_html_attributes.deep_merge(@attributes.except(:data))
  all_attributes[:data] = trigger_html_attributes[:data].merge(@attributes.fetch(:data, {}))
-%>
<%= content_tag :button, all_attributes do %>
  <%= content || yield %>
<% end %>
