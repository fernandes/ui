<%# TabsList Component - Container for tab triggers %>
<%
  content ||= local_assigns.fetch(:content, nil)
  @orientation = local_assigns.fetch(:orientation, @_tabs_orientation || "horizontal")
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend ::UI::Tabs::TabsListBehavior

  # Get HTML attributes from behavior
  all_attributes = list_html_attributes.deep_merge(@attributes)
-%>
<%= content_tag :div, all_attributes do %>
  <%= content || yield %>
<% end %>
