<%# EmptyDescription - Displays the description %>
<%
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  extend UI::EmptyDescriptionBehavior

  all_attributes = empty_description_html_attributes.deep_merge(@attributes)
-%>
<%= content_tag :p, all_attributes do %>
  <%= yield if block_given? %>
  <%= content if local_assigns[:content] %>
<% end %>
