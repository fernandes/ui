<%# EmptyHeader - Wraps media, title, and description %>
<%
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  extend UI::EmptyHeaderBehavior

  all_attributes = empty_header_html_attributes.deep_merge(@attributes)
-%>
<%= content_tag :div, all_attributes do %>
  <%= yield if block_given? %>
  <%= content if local_assigns[:content] %>
<% end %>
