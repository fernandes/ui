<%
  # Carousel Content - ERB Partial
  # Content wrapper (viewport)

  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})
  content_param = local_assigns.fetch(:content, nil)

  extend UI::CarouselContentBehavior
  all_attributes = carousel_content_html_attributes
%>
<%= content_tag :div, all_attributes do %>
  <%= content_tag :div, carousel_content_container_html_attributes do %>
    <%= content_param || yield %>
  <% end %>
<% end %>
