<%
  # Carousel - ERB Partial
  # Root carousel container with Embla Carousel integration

  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})
  @orientation = local_assigns.fetch(:orientation, "horizontal")
  @opts = local_assigns.fetch(:opts, {})
  @plugins = local_assigns.fetch(:plugins, nil)
  content_param = local_assigns.fetch(:content, nil)

  extend UI::CarouselBehavior
  all_attributes = carousel_html_attributes
%>
<%= content_tag :div, all_attributes do %>
  <%= content_param || yield %>
<% end %>
