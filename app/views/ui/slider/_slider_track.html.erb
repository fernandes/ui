<%# Slider Track - Background rail that contains the range %>
<%
  content ||= local_assigns.fetch(:content, nil)
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend ::UI::Slider::SliderTrackBehavior

  # Get HTML attributes from behavior
  all_attributes = slider_track_html_attributes.deep_merge(@attributes.except(:data))
  all_attributes[:data] = slider_track_html_attributes[:data].merge(@attributes.fetch(:data, {}))
-%>
<%= content_tag :div, all_attributes do %>
  <%= content || yield %>
<% end %>
