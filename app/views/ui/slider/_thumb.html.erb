<%# Slider Thumb - Draggable handle that controls the slider value %>
<%
  @disabled = local_assigns.fetch(:disabled, false)
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend UI::SliderThumbBehavior

  # Get HTML attributes from behavior
  all_attributes = slider_thumb_html_attributes.deep_merge(@attributes.except(:data))
  all_attributes[:data] = slider_thumb_html_attributes[:data].merge(@attributes.fetch(:data, {}))
-%>
<%= content_tag :div, "", all_attributes %>
