<%# Slider Range - Filled portion showing the selected value %>
<%
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend UI::SliderRangeBehavior

  # Get HTML attributes from behavior
  all_attributes = slider_range_html_attributes.deep_merge(@attributes.except(:data))
  all_attributes[:data] = slider_range_html_attributes[:data].merge(@attributes.fetch(:data, {}))
-%>
<%= content_tag :div, "", all_attributes %>
