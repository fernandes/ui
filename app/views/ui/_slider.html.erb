<%# Slider Component - Root container for range slider %>
<%
  content ||= local_assigns.fetch(:content, nil)
  @min = local_assigns.fetch(:min, 0)
  @max = local_assigns.fetch(:max, 100)
  @step = local_assigns.fetch(:step, 1)
  @value = local_assigns.fetch(:value, nil)
  @center_point = local_assigns.fetch(:center_point, nil)
  # If center_point is defined and no default_value provided, start at center
  @default_value = local_assigns.fetch(:default_value, @center_point ? [@center_point] : [@min])
  @disabled = local_assigns.fetch(:disabled, false)
  @orientation = local_assigns.fetch(:orientation, "horizontal")
  @inverted = local_assigns.fetch(:inverted, false)
  @name = local_assigns.fetch(:name, "")
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend UI::SliderBehavior

  # Get HTML attributes from behavior
  all_attributes = slider_html_attributes.deep_merge(@attributes.except(:data))
  all_attributes[:data] = slider_html_attributes[:data].merge(@attributes.fetch(:data, {}))
-%>
<%= content_tag :div, all_attributes do %>
  <%= content || yield %>
<% end %>
