<%# Context Menu Separator Component - Visual divider between items %>
<%
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend UI::ContextMenu::ContextMenuSeparatorBehavior

  # Get HTML attributes from behavior
  all_attributes = context_menu_separator_html_attributes.merge(@attributes)
-%>
<%= content_tag :div, "", **all_attributes %>
