<%# Context Menu Radio Item Component - Menu item with radio button %>
<%
  content ||= local_assigns.fetch(:content, nil)
  @checked = local_assigns.fetch(:checked, false)
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend UI::ContextMenuRadioItemBehavior

  # Get HTML attributes from behavior
  all_attributes = context_menu_radio_item_html_attributes.deep_merge(@attributes)
-%>
<%= content_tag :div, all_attributes do %>
  <span class="pointer-events-none absolute left-2 flex size-3.5 items-center justify-center">
    <% if @checked %>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-2">
        <circle cx="12" cy="12" r="10"></circle>
      </svg>
    <% end %>
  </span>
  <%= content || yield %>
<% end %>
