<%# Context Menu Radio Group Component - Container for radio items %>
<%
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend UI::ContextMenu::ContextMenuRadioGroupBehavior

  # Get HTML attributes from behavior
  all_attributes = context_menu_radio_group_html_attributes.merge(@attributes)
-%>
<%= content_tag :div, all_attributes do %>
  <%= yield %>
<% end %>
