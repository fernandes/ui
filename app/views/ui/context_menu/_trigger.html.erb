<%# Context Menu Trigger Component - The element that triggers the context menu on right-click %>
<%
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend UI::ContextMenuTriggerBehavior

  # Get HTML attributes from behavior
  all_attributes = context_menu_trigger_html_attributes.deep_merge(@attributes)
-%>
<%= content_tag :div, all_attributes do %>
  <%= yield %>
<% end %>
