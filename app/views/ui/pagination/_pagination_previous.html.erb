<%# PaginationPrevious - shadcn/ui inspired component for Rails %>
<%
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})
  @href = local_assigns.fetch(:href, "#")

  # Extend behavior for shared logic
  extend UI::Pagination::PaginationPreviousBehavior
-%>
<%= render "ui/pagination/pagination_link",
           href: @href,
           size: "default",
           classes: previous_classes,
           attributes: previous_attributes do %>
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4">
    <path d="m15 18-6-6 6-6"/>
  </svg>
  <span class="hidden sm:block">Previous</span>
<% end %>
