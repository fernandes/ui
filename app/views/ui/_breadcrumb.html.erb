<%# Breadcrumb Component - Navigation breadcrumb container %>
<%
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend UI::BreadcrumbBehavior

  # Get HTML attributes from behavior
  all_attributes = breadcrumb_html_attributes.deep_merge(@attributes)
-%>
<%= content_tag :nav, all_attributes do %>
  <%= yield %>
<% end %>
