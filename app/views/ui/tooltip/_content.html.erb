<%# Tooltip Content - Popup that displays tooltip information %>
<%
  @side = local_assigns.fetch(:side, "top")
  @align = local_assigns.fetch(:align, "center")
  @side_offset = local_assigns.fetch(:side_offset, 4)
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend UI::TooltipContentBehavior

  # Get HTML attributes from behavior
  all_attributes = tooltip_content_html_attributes.deep_merge(@attributes)
-%>
<%= content_tag :div, all_attributes do %>
  <%= yield %>
<% end %>
