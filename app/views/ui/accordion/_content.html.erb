<%# Accordion Content Component - Collapsible content area %>
<%
  content ||= local_assigns.fetch(:content, nil)
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Get context from parent item
  @item_value = @_accordion_item_value || SecureRandom.hex(4)
  @initial_open = @_accordion_item_initial_open || false

  # Extend behavior for shared logic
  extend UI::AccordionContentBehavior

  # Get HTML attributes from behavior
  all_attributes = content_html_attributes.deep_merge(@attributes)
-%>
<%= content_tag :div, all_attributes do %>
  <div class="pt-0 pb-4">
    <%= content || yield %>
  </div>
<% end %>
