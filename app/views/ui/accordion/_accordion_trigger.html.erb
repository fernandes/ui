<%# Accordion Trigger Component - Button to toggle accordion item %>
<%
  content ||= local_assigns.fetch(:content, nil)
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Get context from parent item
  @item_value = @_accordion_item_value || SecureRandom.hex(4)
  @initial_open = @_accordion_item_initial_open || false

  # Extend behavior for shared logic
  extend ::UI::Accordion::AccordionTriggerBehavior

  # Get HTML attributes from behavior
  all_attributes = trigger_html_attributes.deep_merge(@attributes)
  @orientation ||= "vertical"
-%>
<%= content_tag :h3, class: "flex", "data-orientation": @orientation, "data-state": trigger_state do %>
  <%= content_tag :button, all_attributes do %>
    <%= content || yield %>
    <%= caret_svg %>
  <% end %>
<% end %>
