<%
  # CommandSeparator - ERB Partial
  #
  # Visual separator between command groups.
  #
  # @param classes [String] Additional CSS classes
  # @param attributes [Hash] Additional HTML attributes

  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  extend UI::CommandSeparatorBehavior
  all_attributes = command_separator_html_attributes.deep_merge(@attributes)
%>
<%= content_tag :div, nil, all_attributes %>
