<%# Breadcrumb List Component - Container for breadcrumb items %>
<%
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend UI::Breadcrumb::BreadcrumbListBehavior

  # Get HTML attributes from behavior
  all_attributes = breadcrumb_list_html_attributes.deep_merge(@attributes)
-%>
<%= content_tag :ol, all_attributes do %>
  <%= yield %>
<% end %>
