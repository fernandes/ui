<%# Breadcrumb Ellipsis Component - Indicator for collapsed items %>
<%
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend UI::BreadcrumbEllipsisBehavior

  # Get HTML attributes from behavior
  all_attributes = breadcrumb_ellipsis_html_attributes.deep_merge(@attributes)

  # Capture block content if provided
  block_content = capture { yield } if block_given?
-%>
<%= content_tag :span, all_attributes do %>
  <% if block_content.present? %>
    <%= block_content %>
  <% else %>
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-ellipsis h-4 w-4">
      <circle cx="12" cy="12" r="1"/>
      <circle cx="19" cy="12" r="1"/>
      <circle cx="5" cy="12" r="1"/>
    </svg>
    <span class="sr-only">More</span>
  <% end %>
<% end %>
