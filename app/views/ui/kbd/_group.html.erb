<%# KbdGroup Component - Groups multiple keyboard keys %>
<%
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend UI::KbdGroupBehavior

  # Get HTML attributes from behavior
  all_attributes = kbd_group_html_attributes.deep_merge(@attributes)
-%>
<%= content_tag :kbd, all_attributes do %>
  <%= yield %>
<% end %>
