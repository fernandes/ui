<%
  # Card - ERB Partial
  #
  # A card container with consistent styling and structure.
  # Uses CardBehavior module for shared styling logic.
  #
  # @param classes [String] Additional CSS classes to merge
  # @param attributes [Hash] Additional HTML attributes

  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  extend UI::Card::CardBehavior
  all_attributes = card_html_attributes.deep_merge(@attributes)
%>
<%= content_tag :div, all_attributes do %>
  <%= yield %>
<% end %>
