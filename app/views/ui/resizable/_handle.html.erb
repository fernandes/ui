<%# ResizableHandle Component - Draggable handle between panels %>
<%
  @with_handle = local_assigns.fetch(:with_handle, false)
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend ::UI::Resizable::HandleBehavior

  # Get HTML attributes from behavior
  all_attributes = handle_html_attributes.deep_merge(@attributes.except(:data))
  if @attributes[:data]
    all_attributes[:data] = all_attributes[:data].merge(@attributes[:data])
  end
-%>
<%= content_tag :div, **all_attributes do %>
  <% if @with_handle %>
    <div class="<%= grip_container_classes %>">
      <%= lucide_icon "grip-vertical", class: "h-2.5 w-2.5" %>
    </div>
  <% end %>
<% end %>
