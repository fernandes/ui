<%# ResizablePanelGroup Component - Container for resizable panels %>
<%
  content ||= local_assigns.fetch(:content, nil)
  @direction = local_assigns.fetch(:direction, "horizontal")
  @keyboard_resize_by = local_assigns.fetch(:keyboard_resize_by, 10)
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend UI::ResizablePanelGroupBehavior

  # Get HTML attributes from behavior
  all_attributes = panel_group_html_attributes.deep_merge(@attributes.except(:data))
  if @attributes[:data]
    all_attributes[:data] = all_attributes[:data].merge(@attributes[:data])
  end
-%>
<%= content_tag :div, **all_attributes do %>
  <%= content || yield %>
<% end %>
