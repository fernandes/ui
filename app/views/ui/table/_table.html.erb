<%
  # Table - ERB Partial
  #
  # A table container with consistent styling.
  # Uses TableBehavior module for shared styling logic.
  #
  # @param classes [String] Additional CSS classes to merge
  # @param attributes [Hash] Additional HTML attributes

  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  extend UI::Table::TableBehavior
  all_attributes = table_html_attributes.deep_merge(@attributes)
%>
<%= content_tag :table, all_attributes do %>
  <%= yield %>
<% end %>
