<%
  # Table Row - ERB Partial
  #
  # A table row (tr) with consistent styling.
  # Uses RowBehavior module for shared styling logic.
  #
  # @param classes [String] Additional CSS classes to merge
  # @param attributes [Hash] Additional HTML attributes

  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  extend UI::Table::RowBehavior
  all_attributes = row_html_attributes.deep_merge(@attributes)
%>
<%= content_tag :tr, all_attributes do %>
  <%= yield %>
<% end %>
