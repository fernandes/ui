<%
  # Table Body - ERB Partial
  #
  # A table body (tbody) with consistent styling.
  # Uses BodyBehavior module for shared styling logic.
  #
  # @param classes [String] Additional CSS classes to merge
  # @param attributes [Hash] Additional HTML attributes

  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  extend UI::TableBodyBehavior
  all_attributes = body_html_attributes.deep_merge(@attributes)
%>
<%= content_tag :tbody, all_attributes do %>
  <%= yield %>
<% end %>
