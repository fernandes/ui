<%
  # Table Caption - ERB Partial
  #
  # A table caption with consistent styling.
  # Uses CaptionBehavior module for shared styling logic.
  #
  # @param classes [String] Additional CSS classes to merge
  # @param attributes [Hash] Additional HTML attributes

  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  extend UI::TableCaptionBehavior
  all_attributes = caption_html_attributes.deep_merge(@attributes)
%>
<%= content_tag :caption, all_attributes do %>
  <%= yield %>
<% end %>
