<%
  # Table Head - ERB Partial
  #
  # A table header cell (th) with consistent styling.
  # Uses HeadBehavior module for shared styling logic.
  #
  # @param classes [String] Additional CSS classes to merge
  # @param attributes [Hash] Additional HTML attributes

  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  extend UI::TableHeadBehavior
  all_attributes = head_html_attributes.deep_merge(@attributes)
%>
<%= content_tag :th, all_attributes do %>
  <%= yield %>
<% end %>
