<%
  # ButtonGroup - ERB implementation
  #
  # A container that groups related buttons together with consistent styling.
  #
  # Based on shadcn/ui ButtonGroup: https://ui.shadcn.com/docs/components/button-group

  @orientation = local_assigns.fetch(:orientation, :horizontal)
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.except(:orientation, :classes)

  extend UI::ButtonGroup::ButtonGroupBehavior
  all_attributes = button_group_html_attributes.deep_merge(@attributes)
%>
<%= content_tag :div, all_attributes do %>
  <%= yield %>
<% end %>
