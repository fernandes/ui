<%
  # ButtonGroupSeparator - ERB implementation
  #
  # Visually divides buttons within a button group.
  #
  # Based on shadcn/ui ButtonGroup: https://ui.shadcn.com/docs/components/button-group

  @orientation = local_assigns.fetch(:orientation, :vertical)
  @decorative = local_assigns.fetch(:decorative, true)
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.except(:orientation, :decorative, :classes)

  extend UI::Separator::SeparatorBehavior
  extend UI::ButtonGroup::SeparatorBehavior

  all_attributes = separator_html_attributes.deep_merge(@attributes)
%>
<%= content_tag :div, all_attributes do %>
<% end %>
