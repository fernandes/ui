<%
  variant ||= :default
  classes ||= ""

  # Base CSS classes
  base_classes = "relative w-full rounded-lg border px-4 py-3 text-sm grid has-[>svg]:grid-cols-[calc(var(--spacing)*4)_1fr] grid-cols-[0_1fr] has-[>svg]:gap-x-3 gap-y-0.5 items-start [&>svg]:size-4 [&>svg]:translate-y-0.5 [&>svg]:text-current"

  # Variant classes
  variant_classes = case variant
  when :destructive
    "border-destructive text-destructive bg-card [&>svg]:text-current *:data-[slot=alert-description]:text-destructive/90"
  else
    "bg-card text-card-foreground"
  end

  # Merge all classes
  require "tailwind_merge"
  all_classes = TailwindMerge::Merger.new.merge([base_classes, variant_classes, classes].compact.join(" "))
%>
<div class="<%= all_classes %>" role="alert" data-slot="alert">
  <%= yield %>
</div>
