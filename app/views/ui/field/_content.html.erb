<%# FieldContent Component - Flex column that groups control and descriptions %>
<%
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})

  # Extend behavior for shared logic
  extend UI::FieldContentBehavior

  # Get HTML attributes from behavior
  all_attributes = field_content_html_attributes.deep_merge(@attributes)
-%>
<%= content_tag :div, all_attributes do %>
  <%= yield %>
<% end %>
