<%# Spinner Component - Loading indicator %>
<%
  @classes = local_assigns.fetch(:classes, "")
  @attributes = local_assigns.fetch(:attributes, {})
  @size = local_assigns.fetch(:size, "default")

  # Extend behavior for shared logic
  extend UI::SpinnerBehavior

  # Get HTML attributes from behavior
  all_attributes = spinner_html_attributes.deep_merge(@attributes)

  # SVG attributes
  svg_attributes = all_attributes.merge(
    xmlns: "http://www.w3.org/2000/svg",
    width: "24",
    height: "24",
    viewBox: "0 0 24 24",
    fill: "none",
    stroke: "currentColor",
    "stroke-width": "2",
    "stroke-linecap": "round",
    "stroke-linejoin": "round"
  )
-%>
<%= content_tag :svg, svg_attributes do %>
  <path d="M21 12a9 9 0 1 1-6.219-8.56"/>
<% end %>
